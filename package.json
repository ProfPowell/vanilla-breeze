{
  "name": "vanilla-breeze",
  "version": "0.1.0",
  "description": "A layered HTML component system extending HTML's native model",
  "type": "module",
  "main": "./dist/cdn/vanilla-breeze.js",
  "module": "./dist/cdn/vanilla-breeze.js",
  "style": "./dist/cdn/vanilla-breeze.css",
  "exports": {
    ".": {
      "import": "./dist/cdn/vanilla-breeze.js",
      "style": "./dist/cdn/vanilla-breeze.css"
    },
    "./css": "./dist/cdn/vanilla-breeze.css",
    "./js": "./dist/cdn/vanilla-breeze.js"
  },
  "files": [
    "dist/cdn/",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "*.css",
    "./dist/cdn/vanilla-breeze.js",
    "./src/lib/composer/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/profpowell/vanilla-breeze.git"
  },
  "homepage": "https://profpowell.github.io/vanilla-breeze/",
  "scripts": {
    "dev": "cd 11ty-site && npm run dev",
    "build": "cd 11ty-site && npm run build:doc-extras && npx @11ty/eleventy && cd .. && npm run build:cdn && npm run search:index",
    "build:site": "cd 11ty-site && npm run build:doc-extras && npx @11ty/eleventy",
    "build:cdn": "node scripts/build-cdn.js",
    "build:copy-icons": "mkdir -p dist/src && cp -r src/icons dist/src/icons",
    "search:index": "pagefind --site 11ty-site/_site",
    "preview": "cd 11ty-site && npm run preview",
    "lint:html": "html-validate 'docs/**/*.html'",
    "lint": "npm run lint:html",
    "test": "node --test '.claude/test/**/*.test.js'",
    "health": "node .claude/scripts/health-check.js",
    "check": "npm run lint && npm run test",
    "icons:sync": "node scripts/sync-icons.js",
    "prepublishOnly": "npm run build:cdn"
  },
  "devDependencies": {
    "@profpowell/browser-window": "^1.1.0",
    "@profpowell/code-block": "^2.4.0",
    "html-validate": "^8.24.0",
    "interestfor": "^1.0.7",
    "lucide-static": "^0.562.0",
    "pagefind": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "keywords": [
    "components",
    "css",
    "custom-elements",
    "web-components",
    "a11y"
  ],
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.58.2"
  }
}
