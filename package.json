{
  "name": "vanilla-breeze",
  "version": "0.1.0",
  "description": "A layered HTML component system extending HTML's native model",
  "type": "module",
  "main": "./dist/cdn/vanilla-breeze.js",
  "module": "./dist/cdn/vanilla-breeze.js",
  "style": "./dist/cdn/vanilla-breeze.css",
  "exports": {
    ".": {
      "import": "./dist/cdn/vanilla-breeze.js",
      "style": "./dist/cdn/vanilla-breeze.css"
    },
    "./css": "./dist/cdn/vanilla-breeze.css",
    "./js": "./dist/cdn/vanilla-breeze.js"
  },
  "files": [
    "dist/cdn/",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "*.css",
    "./dist/cdn/vanilla-breeze.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/profpowell/vanilla-breeze.git"
  },
  "homepage": "https://profpowell.github.io/vanilla-breeze/",
  "scripts": {
    "dev": "astro dev",
    "dev:vite": "vite",
    "build": "astro build && npm run build:copy-icons && npm run build:cdn && npm run search:index && npm run search:copy",
    "build:vite": "vite build && npm run build:copy-icons && npm run build:fix-paths && npm run build:cdn",
    "build:site": "astro build && npm run build:copy-icons && npm run build:cdn",
    "build:cdn": "node scripts/build-cdn.js",
    "build:copy-icons": "mkdir -p dist/src && cp -r src/icons dist/src/icons",
    "build:fix-paths": "node scripts/fix-paths.js",
    "search:index": "pagefind --site dist",
    "search:copy": "cp -r dist/pagefind public/",
    "search:dev": "pagefind --site . --output-path public/pagefind",
    "preview": "astro preview",
    "preview:vite": "vite preview",
    "lint:html": "html-validate 'demo/**/*.html'",
    "lint": "npm run lint:html",
    "icons:sync": "node scripts/sync-icons.js",
    "prepublishOnly": "npm run build:cdn"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@profpowell/browser-window": "github:ProfPowell/browser-window",
    "@profpowell/code-block": "github:ProfPowell/code-block",
    "astro": "^5.16.15",
    "html-validate": "^8.24.0",
    "lucide-static": "^0.562.0",
    "pagefind": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "keywords": [
    "components",
    "css",
    "custom-elements",
    "web-components",
    "a11y"
  ],
  "license": "MIT"
}
