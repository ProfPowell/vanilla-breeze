      <!-- Area Chart Demo -->
      <section class="demo-section">
        <h2>Area Chart</h2>
        <p>Filled region under connecting lines using <code>--start</code> and <code>--end</code> with clip-path polygon.</p>

        <browser-window url="area-chart.html">
