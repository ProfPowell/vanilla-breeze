{% set lineChartExample %}<table class="vb-chart" data-type="line" data-grid>
  <caption>Weekly Active Users</caption>
  <tbody>
    <tr>
      <th scope="row">Mon</th>
      <td style="--start: 0.45; --end: 0.45">450</td>
    </tr>
    <tr>
      <th scope="row">Tue</th>
      <td style="--start: 0.45; --end: 0.62">620</td>
    </tr>
