              <tbody>
                <tr><th scope="row">A</th><td style="--value: 0.7">70</td></tr>
                <tr><th scope="row">B</th><td style="--value: 0.5">50</td></tr>
                <tr><th scope="row">C</th><td style="--value: 0.9">90</td></tr>
