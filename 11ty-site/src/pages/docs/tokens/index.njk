{% set colorExample %}/* Semantic colors adapt to light/dark mode */
.card {
  background: var(--color-surface);
  color: var(--color-text);
  border: 1px solid var(--color-border);
}

/* Brand colors */
.button {
  background: var(--color-primary);
  color: var(--color-text-on-primary);
}

.button:hover {
  background: var(--color-primary-hover);
}{% endset %}

{% set spacingExample %}/* T-shirt size scale */
.section {
  padding: var(--size-l);       /* 1.5rem / 24px */
  margin-block: var(--size-xl); /* 2rem / 32px */
  gap: var(--size-m);           /* 1rem / 16px */
}

/* Numeric aliases (Open Props compatible) */
.card {
  padding: var(--size-3);  /* Same as --size-m */
  gap: var(--size-2);      /* Same as --size-xs */
}{% endset %}

{% set typographyExample %}/* Font families */
body {
  font-family: var(--font-sans);
}

code {
  font-family: var(--font-mono);
}

/* Font sizes */
h1 { font-size: var(--font-size-4xl); }
h2 { font-size: var(--font-size-3xl); }
p  { font-size: var(--font-size-md); }

/* Line heights */
.dense { line-height: var(--line-height-tight); }
.prose { line-height: var(--line-height-relaxed); }{% endset %}

{% set shadowExample %}/* Shadow scale */
.card { box-shadow: var(--shadow-sm); }
.modal { box-shadow: var(--shadow-xl); }

/* Numeric aliases */
.tooltip { box-shadow: var(--shadow-2); }{% endset %}

{% set borderExample %}/* Border widths */
.input {
  border: var(--border-width-thin) solid var(--color-border);
}

/* Border radius */
.button { border-radius: var(--radius-m); }
.avatar { border-radius: var(--radius-full); }
.card   { border-radius: var(--radius-l); }{% endset %}

{% set motionExample %}/* Duration scale */
.transition-fast {
  transition: all var(--duration-fast) var(--ease-default);
}

.transition-slow {
  transition: all var(--duration-slow) var(--ease-out);
}

/* Respects prefers-reduced-motion automatically */{% endset %}

