{% set loadingExample %}<img src="hero.jpg" alt="Hero banner" />

<!-- Below the fold: lazy load -->
<img src="gallery-1.jpg" alt="Gallery photo" loading="lazy" />

<!-- Critical image: prioritize -->
<img src="lcp-hero.jpg" alt="Hero" fetchpriority="high" />

<!-- Non-critical iframe: lazy load -->
<iframe src="/widget" loading="lazy"></iframe>{% endset %}

{% set decodingExample %}<!-- Let the browser decode off the main thread -->
<img src="photo.jpg" alt="Photo" decoding="async" />

<!-- Must render synchronously (rare) -->
<img src="icon.svg" alt="" decoding="sync" />{% endset %}

{% set inputmodeExample %}<!-- Numeric keyboard for PIN entry -->
<input type="text" inputmode="numeric" pattern="[0-9]*" />

<!-- Email keyboard with @ and .com -->
<input type="email" inputmode="email" />

<!-- URL keyboard with / and .com -->
<input type="url" inputmode="url" />

<!-- Phone dialer -->
<input type="tel" inputmode="tel" />

<!-- Search keyboard with Go/Search button -->
<input type="search" inputmode="search" />{% endset %}

{% set enterkeyhintExample %}<!-- Show "Search" on mobile keyboard -->
<input type="search" enterkeyhint="search" />

<!-- Show "Send" for chat input -->
<input type="text" enterkeyhint="send" />

<!-- Show "Next" to advance to next field -->
<input type="text" enterkeyhint="next" />

<!-- Show "Done" to close keyboard -->
<input type="text" enterkeyhint="done" />{% endset %}

{% set autocompleteExample %}<form>
  <label for="name">Full name</label>
  <input type="text" id="name" autocomplete="name" />

  <label for="email">Email</label>
  <input type="email" id="email" autocomplete="email" />

  <label for="tel">Phone</label>
  <input type="tel" id="tel" autocomplete="tel" />

  <label for="street">Street address</label>
  <input type="text" id="street" autocomplete="street-address" />

  <label for="cc">Card number</label>
  <input type="text" id="cc" autocomplete="cc-number" />
</form>{% endset %}

{% set hiddenInertExample %}<!-- Hidden: removed from rendering and accessibility tree -->
<div hidden>This content is not visible or accessible</div>

<!-- Hidden until-found: collapsed but searchable (find-in-page) -->
<div hidden="until-found">Collapsed but browser can reveal it</div>

<!-- Inert: visible but non-interactive -->
<main inert>
  <p>Content is visible but cannot be clicked, focused, or selected</p>
</main>{% endset %}

{% set popoverExample %}<!-- Toggle a popover without any JavaScript -->
<button popovertarget="menu">Open Menu</button>
<div id="menu" popover>
  <p>This pops over everything. Click outside to dismiss.</p>
</div>

<!-- Manual popover: must be closed explicitly -->
<button popovertarget="info" popovertargetaction="toggle">Info</button>
<div id="info" popover="manual">
  <p>This stays open until you close it.</p>
  <button popovertarget="info" popovertargetaction="hide">Close</button>
</div>{% endset %}

{% set contenteditableExample %}<!-- Make any element editable -->
<blockquote contenteditable="true">
  Click here to edit this quote.
</blockquote>

<!-- Plaintext only: no formatting -->
<div contenteditable="plaintext-only">
  Type here. Paste strips formatting.
</div>{% endset %}

{% set langDirExample %}<!-- Set language for proper hyphenation and screen reader pronunciation -->
<p>The French word <span lang="fr">château</span> means castle.</p>

<!-- Right-to-left content -->
<p dir="rtl" lang="ar">مرحبا بالعالم</p>

<!-- Isolate BiDi text to prevent reordering -->
<p>User <bdi>مستخدم</bdi> posted 3 comments.</p>

<!-- Mark content as non-translatable -->
<p>Run <code translate="no">npm install</code> to get started.</p>{% endset %}

{% set relExample %}<!-- Security: prevent window.opener access and referrer leaking -->
<a href="https://example.com" rel="noopener noreferrer">External link</a>

<!-- Subresource integrity: verify CDN files haven't been tampered with -->
<script
  src="https://cdn.example.com/lib.js"
  integrity="sha384-abc123..."
  crossorigin="anonymous"
></script>

<!-- Control referrer information sent with requests -->
<img src="https://example.com/image.jpg" referrerpolicy="no-referrer" />

<!-- CORS: request credentials from cross-origin sources -->
<link rel="stylesheet" href="https://fonts.example.com/font.css"
  crossorigin="anonymous" />{% endset %}

{% set patternExample %}<!-- Pattern validation with custom message -->
<label for="zip">ZIP Code</label>
<input type="text" id="zip"
  pattern="[0-9]{5}(-[0-9]{4})?"
  title="5-digit ZIP or ZIP+4 (e.g. 12345 or 12345-6789)" />

<!-- Min/max/step for numeric input -->
<label for="qty">Quantity (multiples of 5)</label>
<input type="number" id="qty" min="0" max="100" step="5" />

<!-- Character limits -->
<label for="bio">Bio</label>
<textarea id="bio" minlength="10" maxlength="300"></textarea>{% endset %}

{% set formAttrExample %}<!-- Associate input with a form elsewhere on the page -->
<form id="checkout">
  <label for="card">Card number</label>
  <input type="text" id="card" autocomplete="cc-number" />
</form>

<!-- This button submits the checkout form, even though it's outside it -->
<button type="submit" form="checkout">Pay Now</button>

<!-- Override form action for a specific button -->
<form action="/save">
  <button type="submit">Save Draft</button>
  <button type="submit" formaction="/publish" formmethod="post">Publish</button>
</form>{% endset %}

