        </tr>
      </tbody>
    </table>

    <h3>Layout Sidebar</h3>
    <table class="props-table">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Values</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>data-layout-sidebar-width</code></td>
