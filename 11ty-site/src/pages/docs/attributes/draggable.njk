{% set lifecycleExample %}{% raw %}<div id="source" draggable="true">Drag me</div>
<div id="target">Drop here</div>

<script>
const source = document.getElementById('source');
const target = document.getElementById('target');

// 1. dragstart â€” fired on the dragged element when dragging begins
source.addEventListener('dragstart', (e) => {
  e.dataTransfer.setData('text/plain', source.textContent);
  e.dataTransfer.effectAllowed = 'move';
});

// 2. dragenter â€” fired on a drop target when a dragged item enters it
target.addEventListener('dragenter', (e) => {
  e.preventDefault();
  target.classList.add('drag-over');
});

// 3. dragover â€” fired continuously while a dragged item is over a target
//    You MUST call preventDefault() to allow dropping
target.addEventListener('dragover', (e) => {
  e.preventDefault();
  e.dataTransfer.dropEffect = 'move';
});

// 4. dragleave â€” fired when a dragged item leaves a drop target
target.addEventListener('dragleave', () => {
  target.classList.remove('drag-over');
});

// 5. drop â€” fired when the item is dropped on a valid target
target.addEventListener('drop', (e) => {
  e.preventDefault();
  target.classList.remove('drag-over');
  const data = e.dataTransfer.getData('text/plain');
  target.textContent = data;
});

// 6. dragend â€” fired on the dragged element when dragging ends (drop or cancel)
source.addEventListener('dragend', () => {
  // Clean up any drag state
});
</script>{% endraw %}{% endset %}

