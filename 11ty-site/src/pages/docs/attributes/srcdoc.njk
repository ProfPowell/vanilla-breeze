{% set basicExample %}<!-- Inline HTML content inside an iframe -->
<iframe srcdoc="&lt;h1&gt;Hello&lt;/h1&gt;&lt;p&gt;This is inline content.&lt;/p&gt;"
  title="Inline content example"
  width="400" height="200"></iframe>{% endset %}

{% set escapingExample %}<!-- HTML must be escaped in the attribute value -->
<iframe srcdoc="
  &lt;style&gt;
    body { font-family: system-ui; padding: 1rem; }
    h1 { color: #333; }
  &lt;/style&gt;
  &lt;h1&gt;Styled Content&lt;/h1&gt;
  &lt;p&gt;This includes its own &lt;code&gt;style&lt;/code&gt; block.&lt;/p&gt;
" title="Styled inline content" width="400" height="200"></iframe>

<!-- Character escaping rules:
     < becomes &lt;
     > becomes &gt;
     & becomes &amp;
     " becomes &quot; (if using double-quoted attribute)
-->{% endset %}

{% set sandboxExample %}<!-- Sandboxed preview: no scripts, no forms, no navigation -->
<iframe srcdoc="&lt;h2&gt;User Post&lt;/h2&gt;&lt;p&gt;This content is isolated.&lt;/p&gt;"
  sandbox
  title="User post preview"
  width="100%" height="150"></iframe>

<!-- Allow scripts but nothing else -->
<iframe srcdoc="&lt;script&gt;document.write('Dynamic content')&lt;/script&gt;"
  sandbox="allow-scripts"
  title="Scripted preview"
  width="100%" height="100"></iframe>{% endset %}

{% set priorityExample %}<!-- srcdoc takes priority over src -->
<iframe src="https://example.com"
  srcdoc="&lt;p&gt;This content is shown instead of example.com.&lt;/p&gt;"
  title="srcdoc priority demo"
  width="400" height="100"></iframe>

<!-- The src acts as a fallback for browsers that don't support srcdoc
     (all modern browsers support it, so this is mainly historical) -->{% endset %}

