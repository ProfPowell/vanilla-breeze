    <tr><td>Redirect tracking</td><td>Yes (extra hop)</td><td>No</td><td>URL is obscured</td><td>Yes</td></tr>
    <tr><td>JS click handler</td><td>Minimal</td><td>Yes</td><td>Buried in scripts</td><td>No</td></tr>
    <tr><td><code>ping</code> attribute</td><td>None</td><td>No</td><td>Yes (in HTML)</td><td>Yes</td></tr>
  </tbody>
