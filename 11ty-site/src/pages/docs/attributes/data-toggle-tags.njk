{% set stylingCode %}{% raw %}/* Tags use CSS :has() — no JS needed for styling */
[data-toggle-tags] label {
  display: inline-flex;
  align-items: center;
  padding: var(--size-2xs) var(--size-s);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-pill);
  cursor: pointer;
  transition: background-color 0.15s, border-color 0.15s;
}

/* Checked state via :has() */
[data-toggle-tags] label:has(:checked) {
  background: var(--color-primary);
  border-color: var(--color-primary);
  color: var(--color-on-primary);
}

/* Hide the checkbox visually */
[data-toggle-tags] input[type="checkbox"] {
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}

/* Disabled state when max reached */
[data-toggle-tags] label:has(:disabled:not(:checked)) {
  opacity: 0.5;
  cursor: not-allowed;
}{% endraw %}{% endset %}

