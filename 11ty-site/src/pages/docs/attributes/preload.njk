{% set basicExample %}<!-- Don't preload anything: saves bandwidth, delays playback -->
<video src="interview.mp4" preload="none" controls
  poster="interview-poster.jpg"
  width="640" height="360">
</video>

<!-- Load metadata only: duration, dimensions, first frame -->
<audio src="podcast-ep12.mp3" preload="metadata" controls></audio>

<!-- Let the browser decide (usually buffers the whole file) -->
<video src="tutorial.mp4" preload="auto" controls
  width="640" height="360">
</video>{% endset %}

{% set heroExample %}<!-- Hero video: poster + no preload = optimal for above-the-fold -->
<video
  src="hero-background.mp4"
  poster="hero-poster.jpg"
  preload="none"
  controls
  width="1280"
  height="720"
  style="max-width: 100%; height: auto;">
</video>{% endset %}

{% set audioExample %}<!-- Podcast player: metadata preload shows duration immediately -->
<audio src="episode-42.mp3" preload="metadata" controls></audio>

