{% set layoutCode %}<!-- Pure CSS layout switching with radio buttons -->
<input type="radio" name="layout" id="layout-stack" class="layout-radio" />
<input type="radio" name="layout" id="layout-sidebar" class="layout-radio" checked />
<input type="radio" name="layout" id="layout-holy-grail" class="layout-radio" />

<!-- Layout changes based on which radio is checked -->
<div class="page-container">
  <header>...</header>
  <nav>...</nav>
  <main>...</main>
  <aside>...</aside>
  <footer>...</footer>
</div>{% endset %}

{% set layoutCss %}/* CSS Grid templates for each layout */
#layout-stack:checked ~ .page-container {
  grid-template:
    "header" auto
    "main" 1fr
    "footer" auto
    / 1fr;
}

#layout-sidebar:checked ~ .page-container {
  grid-template:
    "header header" auto
    "nav main" 1fr
    "footer footer" auto
    / 15rem 1fr;
}

#layout-holy-grail:checked ~ .page-container {
  grid-template:
    "header header header" auto
    "nav main aside" 1fr
    "footer footer footer" auto
    / 12rem 1fr 12rem;
}{% endset %}

{% set themeUsage %}<!-- Apply extreme themes via data-theme attribute -->
<html data-theme="brutalist">
<html data-theme="swiss">
<html data-theme="cyber">
<html data-theme="terminal">
<html data-theme="organic">{% endset %}

