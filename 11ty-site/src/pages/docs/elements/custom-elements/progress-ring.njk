{% set basicCode %}<progress-ring style="--progress: 75" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
  <span>75%</span>
</progress-ring>{% endset %}

{% set sizesCode %}<progress-ring data-size="xs" style="--progress: 60" role="progressbar" aria-valuenow="60"></progress-ring>
<progress-ring data-size="s" style="--progress: 60" role="progressbar" aria-valuenow="60"></progress-ring>
<progress-ring data-size="m" style="--progress: 60" role="progressbar" aria-valuenow="60"><span>60%</span></progress-ring>
<progress-ring data-size="l" style="--progress: 60" role="progressbar" aria-valuenow="60"><span>60%</span></progress-ring>
<progress-ring data-size="xl" style="--progress: 60" role="progressbar" aria-valuenow="60"><span>60%</span></progress-ring>{% endset %}

{% set variantsCode %}<progress-ring data-variant="success" style="--progress: 100" data-size="l"><span>Done</span></progress-ring>
<progress-ring data-variant="warning" style="--progress: 45" data-size="l"><span>45%</span></progress-ring>
<progress-ring data-variant="error" style="--progress: 15" data-size="l"><span>15%</span></progress-ring>{% endset %}

{% set indeterminateCode %}<progress-ring data-indeterminate data-size="l" role="progressbar" aria-label="Loading"></progress-ring>{% endset %}

{% set customCode %}{% raw %}progress-ring {
  --progress-ring-size: 6em;
  --progress-ring-width: 0.5em;
  --progress-ring-color: oklch(55% 0.2 260);
}{% endraw %}{% endset %}

{% set jsUpdateCode %}const ring = document.querySelector('progress-ring');
ring.style.setProperty('--progress', '85');
ring.setAttribute('aria-valuenow', '85');{% endset %}

