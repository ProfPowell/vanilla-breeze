{% set cssImplementation %}layout-grid {
  display: grid;
  gap: var(--_gap, var(--size-m));
  grid-template-columns: repeat(auto-fit, minmax(var(--_min, 15rem), 1fr));

  &[data-layout-min="10rem"] { --_min: 10rem; }
  &[data-layout-min="12rem"] { --_min: 12rem; }
  &[data-layout-min="15rem"] { --_min: 15rem; }
  &[data-layout-min="18rem"] { --_min: 18rem; }
  &[data-layout-min="20rem"] { --_min: 20rem; }
  &[data-layout-min="25rem"] { --_min: 25rem; }

  &[data-layout-gap="none"] { --_gap: 0; }
  &[data-layout-gap="xs"]   { --_gap: var(--size-xs); }
  &[data-layout-gap="s"]    { --_gap: var(--size-s); }
  &[data-layout-gap="m"]    { --_gap: var(--size-m); }
  &[data-layout-gap="l"]    { --_gap: var(--size-l); }
  &[data-layout-gap="xl"]   { --_gap: var(--size-xl); }
}{% endset %}

