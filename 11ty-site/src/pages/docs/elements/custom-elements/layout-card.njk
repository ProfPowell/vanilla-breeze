      <strong>Nested Card</strong>
    </layout-card>
  </layout-stack>
</layout-card>{% endset %}

{% set profileCardCode %}<layout-card data-variant="outlined">
  <layout-stack data-layout-gap="m" data-layout-align="center">
    <img src="avatar.jpg" alt="Avatar" />
    <layout-stack data-layout-gap="xs" data-layout-align="center">
      <strong>Jane Doe</strong>
      <span>Product Designer</span>
    </layout-stack>
    <layout-cluster data-layout-gap="xs">
      <span class="tag">UX</span>
      <span class="tag">UI</span>
    </layout-cluster>
  </layout-stack>
</layout-card>{% endset %}

{% set cssImplementation %}layout-card {
  display: block;
  padding: var(--_padding, var(--size-m));
  background: var(--color-surface);
  border-radius: var(--radius-l);
  box-shadow: 0 1px 3px oklch(0% 0 0 / 0.1);

  &[data-variant="elevated"] {
    box-shadow:
      0 4px 6px oklch(0% 0 0 / 0.07),
      0 2px 4px oklch(0% 0 0 / 0.05);
  }

  &[data-variant="outlined"] {
    box-shadow: none;
    border: var(--border-width-thin) solid var(--color-border);
  }

  &[data-variant="ghost"] {
    box-shadow: none;
    background: transparent;
  }

  &[data-layout-padding="none"] { --_padding: 0; }
  &[data-layout-padding="s"]    { --_padding: var(--size-s); }
  &[data-layout-padding="m"]    { --_padding: var(--size-m); }
  &[data-layout-padding="l"]    { --_padding: var(--size-l); }
  &[data-layout-padding="xl"]   { --_padding: var(--size-xl); }

  /* Nested cards get raised background */
  layout-card {
    background: var(--color-surface-raised);
  }
}{% endset %}

