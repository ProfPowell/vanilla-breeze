{% set cssImplementation %}semantic-card {
  display: grid;
  grid-template:
    "header" auto
    "content" 1fr
    "footer" auto / 1fr;
  background: var(--color-surface);
  border-radius: var(--radius-l);
  box-shadow: 0 1px 3px oklch(0% 0 0 / 0.1);
  overflow: hidden;
  container-type: inline-size;
}

/* Grid area assignments */
semantic-card > :is(header, [slot="header"]) {
  grid-area: header;
  padding: var(--size-m) var(--size-l);
  border-block-end: 1px solid var(--color-border);
}

semantic-card > :is(section, [slot="content"]) {
  grid-area: content;
  padding: var(--size-l);
}

semantic-card > :is(footer, [slot="footer"]) {
  grid-area: footer;
  padding: var(--size-m) var(--size-l);
  border-block-start: 1px solid var(--color-border);
  display: flex;
  flex-wrap: wrap;
  gap: var(--size-s);
  justify-content: flex-end;
}{% endset %}

