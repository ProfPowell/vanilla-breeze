{% set basicMeterCode %}<label>Storage Used</label>
<meter value="0.7" min="0" max="1">70%</meter>

<label>Battery Level</label>
<meter value="85" min="0" max="100">85%</meter>{% endset %}

{% set optimumRangeCode %}<!-- High optimum (higher is better, like battery) -->
<meter value="0.9" min="0" max="1"
       low="0.3" high="0.7" optimum="0.9">90%</meter>

<!-- Low optimum (lower is better, like disk usage) -->
