       low="0.3" high="0.7" optimum="0.1">20%</meter>{% endset %}

{% set sizeVariantsCode %}<meter class="xs" value="0.6">60%</meter>
<meter class="s" value="0.6">60%</meter>
<meter value="0.6">60%</meter>  <!-- default -->
<meter class="l" value="0.6">60%</meter>{% endset %}

{% set segmentedMeterCode %}<meter class="segmented" value="0.7">70%</meter>{% endset %}

{% set labeledMeterCode %}<div class="labeled">
  <label>
    <span>Storage</span>
