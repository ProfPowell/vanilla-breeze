{% set cssImplementationCode %}search {
  display: block;
}

/* Inline variant */
search.inline {
  display: flex;
  gap: var(--size-xs);

  & > input {
    flex: 1;
  }
}

/* Expanded variant */
search.expanded {
  inline-size: 100%;

  & > input {
    inline-size: 100%;
  }
}

/* Compact variant */
search.compact {
  display: flex;
  gap: var(--size-2xs);

  & > input {
    padding-block: var(--size-xs);
    font-size: var(--font-size-sm);
  }

  & > button {
    padding-block: var(--size-xs);
    padding-inline: var(--size-s);
    font-size: var(--font-size-sm);
  }
}

/* Rounded variant */
search.rounded {
  & > input {
    border-radius: var(--radius-full);
    padding-inline: var(--size-m);
  }
}

/* Header variant */
search.header {
  max-inline-size: 300px;
}

/* With icon variant */
search.with-icon {
  position: relative;

  & > input {
    padding-inline-start: var(--size-xl);
  }

  & > svg,
  & > .icon {
    position: absolute;
    inset-inline-start: var(--size-s);
    inset-block-start: 50%;
    transform: translateY(-50%);
    color: var(--color-text-muted);
    pointer-events: none;
  }
}{% endset %}

