      <layout-stack data-layout-gap="m" style="max-inline-size: 30rem;">
        <form-field>
          <label for="textarea-small">Small (3 rows)</label>
          <textarea id="textarea-small" rows="3" placeholder="Short input..."></textarea>
        </form-field>
        <form-field>
          <label for="textarea-medium">Medium (5 rows, default)</label>
          <textarea id="textarea-medium" rows="5" placeholder="Medium input..."></textarea>
        </form-field>
        <form-field>
          <label for="textarea-large">Large (10 rows)</label>
          <textarea id="textarea-large" rows="10" placeholder="Long input..."></textarea>
        </form-field>
      </layout-stack>
    </div>

    <h3>Code</h3>
    <code-block language="html" show-lines label="Textarea size with rows attribute">{{ textareaSizeCode | escape }}</code-block>
  </section>

  <section>
    <h2>Character Limits</h2>
    <p>Use <code>minlength</code> and <code>maxlength</code> for validation.</p>

    <div class="example">
      <layout-stack data-layout-gap="m" style="max-inline-size: 30rem;">
        <form-field>
          <label for="textarea-minmax">Bio (50-200 characters)</label>
          <textarea id="textarea-minmax" minlength="50" maxlength="200" placeholder="Tell us about yourself..."></textarea>
          <span class="help">Minimum 50 characters, maximum 200</span>
        </form-field>
        <form-field>
          <label for="textarea-max">Tweet (280 max)</label>
          <textarea id="textarea-max" maxlength="280" rows="3" placeholder="What's happening?"></textarea>
        </form-field>
      </layout-stack>
    </div>

    <h3>Code</h3>
    <code-block language="html" show-lines label="Character limits">{{ characterLimitsCode | escape }}</code-block>
  </section>

  <section>
    <h2>Textarea States</h2>

    <h3>Disabled</h3>
    <p>Cannot be edited or focused.</p>
    <div class="example">
      <form-field style="max-inline-size: 30rem;">
        <label for="textarea-disabled">Disabled</label>
        <textarea id="textarea-disabled" disabled>This content cannot be edited.</textarea>
      </form-field>
    </div>

    <h3>Read-only</h3>
    <p>Can be selected and copied but not edited.</p>
    <div class="example">
      <form-field style="max-inline-size: 30rem;">
        <label for="textarea-readonly">Read-only</label>
        <textarea id="textarea-readonly" readonly>This content can be selected and copied but not modified.</textarea>
      </form-field>
    </div>

    <h3>Invalid</h3>
    <p>Shows validation error state.</p>
    <div class="example">
      <form-field style="max-inline-size: 30rem;">
        <label for="textarea-invalid">Description</label>
        <textarea id="textarea-invalid" aria-invalid="true" minlength="50">Too short</textarea>
        <span class="error">Please enter at least 50 characters</span>
      </form-field>
    </div>

    <h3>Code</h3>
    <code-block language="html" show-lines label="Textarea states">{{ textareaStatesCode | escape }}</code-block>
  </section>

