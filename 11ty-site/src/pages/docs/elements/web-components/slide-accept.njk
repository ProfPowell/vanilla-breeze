{% set eventCode %}{% raw %}const slider = document.querySelector('slide-accept-wc');

slider.addEventListener('slide-accept', () => {
  console.log('Confirmed!');
});

slider.addEventListener('slide-reset', () => {
  console.log('Reset');
});{% endraw %}{% endset %}

{% set resetCode %}const slider = document.querySelector('slide-accept-wc');

// Check state
console.log(slider.activated); // true/false

// Reset to initial state
slider.reset();{% endset %}

