{% set eventCode %}const splitter = document.querySelector('splitter-wc');

splitter.addEventListener('splitter-resize', (e) => \{
  console.log('Position:', e.detail.position);
\});

splitter.addEventListener('splitter-collapse', (e) => \{
  console.log('Collapsed:', e.detail.collapsed);
\});{% endset %}

{% set apiCode %}const el = document.querySelector('splitter-wc');

el.position = 30;          // Set position to 30%
console.log(el.position);  // Read current position

el.collapsed = true;       // Collapse first panel
el.collapsed = false;      // Expand

el.reset();                // Restore to initial position{% endset %}

