splitter-wc:not(:defined) \{
  display: flex;
  gap: var(--size-s);
\}

splitter-wc:not(:defined) > * \{
  flex: 1;
  min-width: 0;
\}{% endset %}

{% set stylingCode %}/* Custom divider color */
.splitter-divider \{
  background: var(--color-interactive);
\}

/* Custom grip handle */
.splitter-divider::after \{
  background: white;
  border-radius: 4px;
\}{% endset %}

