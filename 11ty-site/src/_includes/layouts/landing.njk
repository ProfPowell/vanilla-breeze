{#
  Landing layout — marketing/landing page with hero support.
  Uses its own header and footer, not the site-wide ones.

  Front matter variables:
    title       — page title
    description — meta description
#}
{% extends "layouts/base.njk" %}

{% block pageHeader %}
<header>
  <layout-center data-layout-max="wide">
    <layout-cluster data-layout-justify="space-between" data-layout-gap="l">
      <a href="/" class="logo">Brand</a>
      <nav class="horizontal pills" aria-label="Main navigation">
        <ul>
          <li><a href="/features/">Features</a></li>
          <li><a href="/pricing/">Pricing</a></li>
          <li><a href="/docs/">Docs</a></li>
          <li><a href="/blog/">Blog</a></li>
        </ul>
      </nav>
      <div class="header-actions">
        <theme-wc>
          <button data-trigger class="ghost" aria-label="Toggle theme">
            <icon-wc name="palette" size="sm"></icon-wc>
            Theme
          </button>
        </theme-wc>
        <a href="/login/" class="button ghost">Log In</a>
        <a href="/signup/" class="button primary">Get Started</a>
      </div>
    </layout-cluster>
  </layout-center>
</header>
{% endblock %}

{% block pageContent %}
<main>
  {{ content | safe }}
</main>
{% endblock %}

{% block pageFooter %}
<footer>
  <layout-center data-layout-max="wide">
    <layout-grid data-layout-gap="2xl" data-min-width="200">
      <div>
        <h3>Company</h3>
        <ul>
          <li><a href="/about/">About</a></li>
          <li><a href="/careers/">Careers</a></li>
          <li><a href="/press/">Press</a></li>
          <li><a href="/contact/">Contact</a></li>
        </ul>
      </div>
      <div>
        <h3>Product</h3>
        <ul>
          <li><a href="/features/">Features</a></li>
          <li><a href="/pricing/">Pricing</a></li>
          <li><a href="/changelog/">Changelog</a></li>
          <li><a href="/roadmap/">Roadmap</a></li>
        </ul>
      </div>
      <div>
        <h3>Resources</h3>
        <ul>
          <li><a href="/docs/">Documentation</a></li>
          <li><a href="/blog/">Blog</a></li>
          <li><a href="/help/">Help Center</a></li>
          <li><a href="/community/">Community</a></li>
        </ul>
      </div>
      <div>
        <h3>Legal</h3>
        <ul>
          <li><a href="/privacy/">Privacy Policy</a></li>
          <li><a href="/terms/">Terms of Service</a></li>
          <li><a href="/security/">Security</a></li>
          <li><a href="/cookies/">Cookie Policy</a></li>
        </ul>
      </div>
    </layout-grid>

    <hr>

    <layout-cluster data-layout-justify="space-between" data-layout-gap="l">
      <p class="copyright">&copy; 2026 Brand. All rights reserved.</p>
      <layout-cluster data-layout-gap="m">
        <a href="https://twitter.com/brand" aria-label="Twitter">
          <icon-wc name="twitter" size="sm"></icon-wc>
        </a>
        <a href="https://github.com/brand" aria-label="GitHub">
          <icon-wc name="github" size="sm"></icon-wc>
        </a>
        <a href="https://linkedin.com/company/brand" aria-label="LinkedIn">
          <icon-wc name="linkedin" size="sm"></icon-wc>
        </a>
      </layout-cluster>
    </layout-cluster>
  </layout-center>
</footer>
{% endblock %}
