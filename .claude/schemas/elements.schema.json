{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "elements.schema.json",
  "title": "Custom HTML Elements Schema",
  "description": "Schema for html-validate custom element definitions",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "properties": {
      "flow": {
        "type": "boolean",
        "description": "Element is flow content"
      },
      "phrasing": {
        "type": "boolean",
        "description": "Element is phrasing content"
      },
      "void": {
        "type": "boolean",
        "description": "Element is void (no closing tag)"
      },
      "permittedContent": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Allowed child elements or content categories (@flow, @phrasing, element names)"
      },
      "attributes": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "required": { "type": "boolean" },
            "boolean": { "type": "boolean" },
            "enum": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "description": "Attribute definitions for the element"
      }
    },
    "additionalProperties": false
  }
}
