{
  "$schema": "./elements.schema.json",
  "layout-row": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-gap": {
        "required": false,
        "enum": ["sm", "md", "lg", "xl"]
      },
      "data-align": {
        "required": false,
        "enum": ["start", "center", "end", "stretch"]
      }
    }
  },
  "layout-grid": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-columns": {
        "required": false,
        "enum": ["2", "3", "4", "auto"]
      },
      "data-gap": {
        "required": false,
        "enum": ["sm", "md", "lg", "xl"]
      }
    }
  },
  "form-field": {
    "flow": true,
    "permittedContent": [
      "label",
      "input",
      "textarea",
      "select",
      "output",
      "meter-display",
      "meter",
      "footer",
      "span",
      "progress-bar",
      "file-input-wrapper",
      "dropzone-area",
      "file-list",
      "@phrasing"
    ],
    "attributes": {
      "data-required": {
        "required": false,
        "boolean": true
      },
      "data-valid": {
        "required": false,
        "boolean": true
      },
      "data-invalid": {
        "required": false,
        "boolean": true
      }
    }
  },
  "table-wrapper": {
    "flow": true,
    "permittedContent": [
      "table",
      "caption"
    ]
  },
  "theme-selector": {
    "flow": true,
    "permittedContent": [
      "fieldset",
      "div",
      "@flow"
    ],
    "attributes": {
      "data-style": {
        "required": false,
        "enum": [
          "default",
          "compact",
          "icons"
        ]
      }
    }
  },
  "icon-wc": {
    "flow": true,
    "phrasing": true,
    "permittedContent": [
      "svg",
      "@phrasing"
    ],
    "attributes": {
      "name": {
        "required": false
      },
      "set": {
        "required": false
      },
      "size": {
        "required": false,
        "enum": [
          "xs",
          "sm",
          "md",
          "lg",
          "xl",
          "2xl"
        ]
      },
      "label": {
        "required": false
      },
      "base-path": {
        "required": false
      }
    }
  },
  "status-badge": {
    "flow": true,
    "phrasing": true,
    "permittedContent": [
      "@phrasing"
    ],
    "attributes": {
      "type": {
        "required": false,
        "enum": [
          "success",
          "warning",
          "error",
          "info"
        ]
      }
    }
  },
  "data-table": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "source": {
        "required": false
      },
      "sortable": {
        "required": false,
        "boolean": true
      }
    }
  },
  "nav-menu": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "orientation": {
        "required": false,
        "enum": [
          "horizontal",
          "vertical"
        ]
      }
    }
  },
  "faq-list": {
    "flow": true,
    "permittedContent": [
      "faq-question",
      "faq-answer"
    ],
    "attributes": {
      "category": {
        "required": false
      }
    }
  },
  "faq-question": {
    "flow": true,
    "permittedContent": [
      "@phrasing"
    ],
    "attributes": {
      "id": {
        "required": false
      }
    }
  },
  "faq-answer": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {}
  },
  "product-card": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-featured": {
        "required": false,
        "boolean": true
      }
    }
  },
  "feature-card": {
    "flow": true,
    "permittedContent": [
      "h3",
      "p",
      "@phrasing"
    ],
    "attributes": {
      "data-highlight": {
        "required": false,
        "boolean": true
      }
    }
  },
  "site-header": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-sticky": {
        "required": false,
        "boolean": true
      }
    }
  },
  "site-footer": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {}
  },
  "hero-section": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-size": {
        "required": false,
        "enum": [
          "small",
          "medium",
          "large"
        ]
      },
      "data-align": {
        "required": false,
        "enum": [
          "left",
          "center",
          "right"
        ]
      }
    }
  },
  "card-grid": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-columns": {
        "required": false,
        "enum": [
          "2",
          "3",
          "4",
          "auto"
        ]
      }
    }
  },
  "user-avatar": {
    "flow": true,
    "phrasing": true,
    "permittedContent": [
      "img",
      "@phrasing"
    ],
    "attributes": {
      "data-size": {
        "required": false,
        "enum": [
          "xs",
          "sm",
          "md",
          "lg",
          "xl"
        ]
      },
      "data-status": {
        "required": false,
        "enum": [
          "online",
          "offline",
          "busy",
          "away"
        ]
      },
      "data-shape": {
        "required": false,
        "enum": [
          "circle",
          "square"
        ]
      },
      "data-color": {
        "required": false,
        "enum": [
          "primary",
          "success",
          "warning",
          "error",
          "muted",
          "green",
          "blue",
          "yellow",
          "red",
          "purple"
        ]
      }
    }
  },
  "tag-item": {
    "flow": true,
    "phrasing": true,
    "permittedContent": [
      "span",
      "button",
      "@phrasing"
    ],
    "attributes": {
      "data-size": {
        "required": false,
        "enum": [
          "small",
          "default",
          "large"
        ]
      },
      "data-removable": {
        "required": false,
        "boolean": true
      }
    }
  },
  "loading-spinner": {
    "flow": true,
    "phrasing": true,
    "permittedContent": [],
    "attributes": {
      "data-size": {
        "required": false,
        "enum": [
          "small",
          "medium",
          "large"
        ]
      },
      "aria-label": {
        "required": false
      }
    }
  },
  "progress-bar": {
    "flow": true,
    "permittedContent": [
      "label",
      "progress",
      "span",
      "@phrasing"
    ],
    "attributes": {
      "data-color": {
        "required": false,
        "enum": [
          "default",
          "success",
          "warning",
          "error"
        ]
      },
      "data-size": {
        "required": false,
        "enum": [
          "small",
          "medium",
          "large"
        ]
      }
    }
  },
  "tab-group": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-style": {
        "required": false,
        "enum": [
          "underline",
          "pills"
        ]
      },
      "data-orientation": {
        "required": false,
        "enum": [
          "horizontal",
          "vertical"
        ]
      }
    }
  },
  "nav-pagination": {
    "flow": true,
    "permittedContent": [
      "nav",
      "a",
      "button",
      "@phrasing"
    ],
    "attributes": {
      "data-style": {
        "required": false,
        "enum": [
          "default",
          "simple",
          "dots"
        ]
      }
    }
  },
  "meter-display": {
    "flow": true,
    "permittedContent": [
      "header",
      "label",
      "meter",
      "span",
      "footer",
      "@phrasing"
    ],
    "attributes": {
      "data-size": {
        "required": false,
        "enum": [
          "small",
          "medium",
          "large"
        ]
      }
    }
  },
  "tooltip-wc": {
    "flow": true,
    "phrasing": true,
    "permittedContent": [
      "button",
      "a",
      "div",
      "template",
      "@phrasing"
    ],
    "attributes": {
      "data-content": {},
      "data-tooltip-position": {
        "values": ["top", "bottom", "left", "right"]
      },
      "data-tooltip-delay": {}
    }
  },
  "stat-card": {
    "flow": true,
    "permittedContent": [
      "@flow"
    ],
    "attributes": {
      "data-trend": {
        "required": false,
        "enum": [
          "up",
          "down",
          "neutral"
        ]
      },
      "data-size": {
        "required": false,
        "enum": [
          "compact",
          "default",
          "large"
        ]
      }
    }
  },
  "stats-grid": {
    "flow": true,
    "permittedContent": [
      "stat-card",
      "@flow"
    ],
    "attributes": {
      "data-columns": {
        "required": false,
        "enum": [
          "2",
          "3",
          "4",
          "auto"
        ]
      }
    }
  },
  "chart-wrapper": {
    "flow": true,
    "permittedContent": [
      "header",
      "footer",
      "@flow"
    ],
    "attributes": {
      "data-size": {
        "required": false,
        "enum": [
          "small",
          "medium",
          "large"
        ]
      }
    }
  },
  "avatar-stack": {
    "flow": true,
    "phrasing": true,
    "permittedContent": [
      "user-avatar",
      "@phrasing"
    ],
    "attributes": {
      "data-max": {
        "required": false
      }
    }
  },
  "file-input-wrapper": {
    "flow": true,
    "permittedContent": [
      "input",
      "button",
      "span",
      "@phrasing"
    ],
    "attributes": {}
  },
  "dropzone-area": {
    "flow": true,
    "permittedContent": [
      "input",
      "dropzone-content",
      "@flow"
    ],
    "attributes": {
      "data-style": {
        "required": false,
        "enum": ["default", "compact"]
      }
    }
  },
  "dropzone-content": {
    "flow": true,
    "permittedContent": [
      "svg",
      "p",
      "span",
      "@phrasing"
    ],
    "attributes": {}
  },
  "file-list": {
    "flow": true,
    "permittedContent": [
      "file-item",
      "@flow"
    ],
    "attributes": {}
  },
  "file-item": {
    "flow": true,
    "permittedContent": [
      "header",
      "footer",
      "progress-bar",
      "@flow"
    ],
    "attributes": {}
  },
  "toggle-track": {
    "flow": true,
    "phrasing": true,
    "permittedContent": [
      "toggle-thumb"
    ],
    "attributes": {}
  },
  "toggle-thumb": {
    "flow": true,
    "phrasing": true,
    "void": true,
    "permittedContent": [],
    "attributes": {}
  }
}
