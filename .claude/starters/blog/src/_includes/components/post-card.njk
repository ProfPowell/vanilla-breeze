<article class="post-card">
  {% if image %}
  <a href="{{ url }}" class="post-card-image">
    <img src="{{ image }}" alt="" loading="lazy" />
  </a>
  {% endif %}

  <div class="post-card-content">
    <header>
      <time datetime="{{ date | dateISO }}" class="post-card-date">
        {{ date | dateDisplay }}
      </time>
      <h2 class="post-card-title">
        <a href="{{ url }}">{{ title }}</a>
      </h2>
    </header>

    <p class="post-card-description">{{ description }}</p>

    {% if tags | length %}
    <ul class="tag-list tag-list--small" aria-label="Tags">
      {% for tag in tags %}
        {% if tag != 'posts' %}
        <li>
          <a href="/tags/{{ tag }}/" class="tag">{{ tag }}</a>
        </li>
        {% endif %}
      {% endfor %}
    </ul>
    {% endif %}
  </div>
</article>