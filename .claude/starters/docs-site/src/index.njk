{{#IF_FRAMEWORK_ELEVENTY}}
---
layout: layouts/base.njk
title: {{SITE_NAME}}
---
<main class="landing">
  <section class="hero">
    <h1>{{SITE_NAME}}</h1>
    <p class="tagline">{{DESCRIPTION}}</p>
    <div class="cta-buttons">
      <a href="/docs/" class="button primary">Get Started</a>
      <a href="/docs/guides/" class="button secondary">Read the Guides</a>
    </div>
  </section>

  <section class="features">
    <div class="feature">
      <h2>Easy to Use</h2>
      <p>Get up and running quickly with clear, concise documentation.</p>
    </div>
    <div class="feature">
      <h2>Well Organized</h2>
      <p>Find what you need with intuitive navigation and search.</p>
    </div>
    <div class="feature">
      <h2>Always Current</h2>
      <p>Documentation that stays in sync with the latest updates.</p>
    </div>
  </section>
</main>

<style>
  .landing {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-8);
  }

  .hero {
    text-align: center;
    padding-block: var(--space-12);
  }

  .hero h1 {
    font-size: var(--font-size-4xl);
    margin-block-end: var(--space-4);
  }

  .tagline {
    font-size: var(--font-size-xl);
    color: var(--color-text-muted);
    margin-block-end: var(--space-8);
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  .button {
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.15s, transform 0.1s;
  }

  .button:hover {
    transform: translateY(-1px);
  }

  .button.primary {
    background-color: {{THEME_COLOR}};
    color: white;
  }

  .button.secondary {
    background-color: var(--color-surface-elevated);
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }

  .features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
    margin-block-start: var(--space-12);
  }

  .feature {
    padding: var(--space-6);
    background: var(--color-surface-elevated);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
  }

  .feature h2 {
    font-size: var(--font-size-lg);
    margin-block-end: var(--space-2);
  }

  .feature p {
    color: var(--color-text-muted);
  }
</style>
{{/IF_FRAMEWORK_ELEVENTY}}