{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "api/login",
  "title": "Login Request",
  "description": "Schema for user login",
  "type": "object",
  "required": ["email", "password"],
  "properties": {
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 254,
      "description": "User's email address"
    },
    "password": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "description": "User's password"
    }
  },
  "additionalProperties": false
}
