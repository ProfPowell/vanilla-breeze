{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "api/list-items",
  "title": "List Items Query",
  "description": "Query parameters for listing items",
  "type": "object",
  "properties": {
    "limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 20,
      "description": "Maximum number of results"
    },
    "offset": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of results to skip"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "archived"],
      "description": "Filter by status"
    },
    "search": {
      "type": "string",
      "maxLength": 100,
      "description": "Search term for name/description"
    },
    "sort": {
      "type": "string",
      "enum": ["created_at", "-created_at", "name", "-name", "updated_at", "-updated_at"],
      "default": "-created_at",
      "description": "Sort order (prefix with - for descending)"
    }
  },
  "additionalProperties": false
}
