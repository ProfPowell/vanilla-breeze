{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "entities/item.update",
  "title": "Update Item",
  "description": "Schema for updating an existing item (all fields optional)",
  "type": "object",
  "minProperties": 1,
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Item name"
    },
    "description": {
      "type": "string",
      "maxLength": 2000,
      "description": "Item description"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "archived"],
      "description": "Item status"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional metadata as JSON"
    }
  },
  "additionalProperties": false
}
