{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "entities/user",
  "title": "User",
  "description": "User entity (public representation)",
  "type": "object",
  "required": ["id", "email", "role", "createdAt"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 254
    },
    "name": {
      "type": ["string", "null"],
      "maxLength": 100
    },
    "role": {
      "type": "string",
      "enum": ["user", "admin"],
      "default": "user"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
