{
  "id": "application",
  "title": "Job Application",
  "description": "Apply for a position at our company.",
  "steps": [
    {
      "title": "Personal Info",
      "fields": ["firstName", "lastName", "email", "phone", "location"]
    },
    {
      "title": "Experience",
      "fields": ["position", "experience", "skills", "resume", "portfolio"]
    },
    {
      "title": "Availability",
      "fields": ["startDate", "salary", "workType", "relocate"]
    },
    {
      "title": "Review",
      "summary": true,
      "fields": []
    }
  ],
  "fields": [
    {
      "name": "firstName",
      "type": "text",
      "label": "First Name",
      "required": true,
      "autocomplete": "given-name"
    },
    {
      "name": "lastName",
      "type": "text",
      "label": "Last Name",
      "required": true,
      "autocomplete": "family-name"
    },
    {
      "name": "email",
      "type": "email",
      "label": "Email Address",
      "required": true,
      "autocomplete": "email"
    },
    {
      "name": "phone",
      "type": "tel",
      "label": "Phone Number",
      "required": true,
      "autocomplete": "tel"
    },
    {
      "name": "location",
      "type": "text",
      "label": "Current Location",
      "placeholder": "City, State/Country",
      "required": true
    },
    {
      "name": "position",
      "type": "select",
      "label": "Position Applying For",
      "required": true,
      "options": [
        { "value": "frontend", "label": "Frontend Developer" },
        { "value": "backend", "label": "Backend Developer" },
        { "value": "fullstack", "label": "Full Stack Developer" },
        { "value": "design", "label": "UI/UX Designer" },
        { "value": "pm", "label": "Product Manager" },
        { "value": "other", "label": "Other" }
      ]
    },
    {
      "name": "experience",
      "type": "select",
      "label": "Years of Experience",
      "required": true,
      "options": [
        { "value": "0-1", "label": "0-1 years" },
        { "value": "1-3", "label": "1-3 years" },
        { "value": "3-5", "label": "3-5 years" },
        { "value": "5-10", "label": "5-10 years" },
        { "value": "10+", "label": "10+ years" }
      ]
    },
    {
      "name": "skills",
      "type": "checkbox",
      "label": "Technical Skills",
      "options": [
        { "value": "javascript", "label": "JavaScript/TypeScript" },
        { "value": "react", "label": "React" },
        { "value": "node", "label": "Node.js" },
        { "value": "python", "label": "Python" },
        { "value": "sql", "label": "SQL" },
        { "value": "aws", "label": "AWS/Cloud" },
        { "value": "figma", "label": "Figma/Design" }
      ]
    },
    {
      "name": "resume",
      "type": "file",
      "label": "Resume/CV",
      "required": true,
      "accept": ".pdf,.doc,.docx",
      "hint": "PDF, DOC, or DOCX (max 5MB)",
      "validation": {
        "maxSize": 5242880
      }
    },
    {
      "name": "portfolio",
      "type": "url",
      "label": "Portfolio/GitHub URL",
      "placeholder": "https://github.com/username",
      "hint": "Optional but recommended"
    },
    {
      "name": "startDate",
      "type": "date",
      "label": "Earliest Start Date",
      "required": true
    },
    {
      "name": "salary",
      "type": "select",
      "label": "Expected Salary Range",
      "options": [
        { "value": "50-75", "label": "$50,000 - $75,000" },
        { "value": "75-100", "label": "$75,000 - $100,000" },
        { "value": "100-125", "label": "$100,000 - $125,000" },
        { "value": "125-150", "label": "$125,000 - $150,000" },
        { "value": "150+", "label": "$150,000+" }
      ]
    },
    {
      "name": "workType",
      "type": "radio",
      "label": "Preferred Work Arrangement",
      "required": true,
      "options": [
        { "value": "remote", "label": "Remote" },
        { "value": "hybrid", "label": "Hybrid" },
        { "value": "onsite", "label": "On-site" },
        { "value": "flexible", "label": "Flexible" }
      ]
    },
    {
      "name": "relocate",
      "type": "checkbox",
      "label": "I am willing to relocate if needed",
      "showWhen": {
        "field": "workType",
        "operator": "equals",
        "value": "onsite"
      }
    }
  ],
  "submitButton": "Submit Application",
  "successMessage": "Thank you for applying! We'll review your application and contact you within 5 business days."
}