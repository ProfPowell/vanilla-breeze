{
  "id": "survey",
  "title": "Customer Satisfaction Survey",
  "description": "Help us improve by sharing your experience.",
  "steps": [
    {
      "title": "About You",
      "fields": ["usage", "duration"]
    },
    {
      "title": "Your Experience",
      "fields": ["satisfaction", "recommend", "features", "improvements"]
    },
    {
      "title": "Final Thoughts",
      "fields": ["comments", "contact", "email"]
    }
  ],
  "fields": [
    {
      "name": "usage",
      "type": "radio",
      "label": "How often do you use our product?",
      "required": true,
      "options": [
        { "value": "daily", "label": "Daily" },
        { "value": "weekly", "label": "Weekly" },
        { "value": "monthly", "label": "Monthly" },
        { "value": "rarely", "label": "Rarely" }
      ]
    },
    {
      "name": "duration",
      "type": "select",
      "label": "How long have you been a customer?",
      "required": true,
      "options": [
        { "value": "new", "label": "Less than 1 month" },
        { "value": "months", "label": "1-6 months" },
        { "value": "year", "label": "6-12 months" },
        { "value": "years", "label": "More than 1 year" }
      ]
    },
    {
      "name": "satisfaction",
      "type": "range",
      "label": "Overall satisfaction (1-10)",
      "validation": {
        "min": 1,
        "max": 10
      },
      "defaultValue": 5
    },
    {
      "name": "recommend",
      "type": "radio",
      "label": "Would you recommend us to others?",
      "required": true,
      "options": [
        { "value": "definitely", "label": "Definitely" },
        { "value": "probably", "label": "Probably" },
        { "value": "not-sure", "label": "Not sure" },
        { "value": "probably-not", "label": "Probably not" },
        { "value": "definitely-not", "label": "Definitely not" }
      ]
    },
    {
      "name": "features",
      "type": "checkbox",
      "label": "Which features do you use most?",
      "options": [
        { "value": "dashboard", "label": "Dashboard" },
        { "value": "reports", "label": "Reports" },
        { "value": "api", "label": "API" },
        { "value": "integrations", "label": "Integrations" },
        { "value": "mobile", "label": "Mobile App" }
      ]
    },
    {
      "name": "improvements",
      "type": "textarea",
      "label": "What could we improve?",
      "placeholder": "Share your suggestions...",
      "rows": 4
    },
    {
      "name": "comments",
      "type": "textarea",
      "label": "Any other comments?",
      "placeholder": "Optional additional feedback...",
      "rows": 3
    },
    {
      "name": "contact",
      "type": "checkbox",
      "label": "I'm open to being contacted for follow-up"
    },
    {
      "name": "email",
      "type": "email",
      "label": "Email for follow-up",
      "showWhen": {
        "field": "contact",
        "operator": "isChecked"
      }
    }
  ],
  "submitButton": "Submit Survey",
  "successMessage": "Thank you for your feedback! Your input helps us improve."
}