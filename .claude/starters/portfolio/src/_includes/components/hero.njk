{# Hero Section #}
<section class="hero">
  <layout-center data-max-width="narrow">
    <layout-stack data-gap="l">
      <h1>{{ hero.title | default(site.name) }}</h1>
      <p class="tagline">{{ hero.tagline | default(site.tagline) }}</p>
      {% if hero.cta %}
      <div class="hero-cta">
        <a href="{{ hero.ctaLink | default('/projects/') }}" class="button primary">
          {{ hero.cta }}
        </a>
      </div>
      {% endif %}
    </layout-stack>
  </layout-center>
</section>

<style>
  .hero {
    padding: var(--size-4xl) var(--size-l);
  }

  .hero h1 {
    font-size: clamp(var(--font-size-4xl), 10vw, var(--font-size-6xl));
    line-height: var(--line-height-tight);
    font-weight: var(--font-weight-bold);
  }

  .hero .tagline {
    font-size: var(--font-size-xl);
    color: var(--color-text-muted);
    max-width: 50ch;
  }

  .hero-cta {
    padding-block-start: var(--size-m);
  }
</style>
