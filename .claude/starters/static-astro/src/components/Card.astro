---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<article>
  <h3>{title}</h3>
  <slot />
</article>

<style>
  article {
    padding: var(--size-xl);
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
  }

  h3 {
    font-size: var(--font-size-lg);
    margin-block-end: var(--size-xs);
  }

  article :global(p) {
    color: var(--text-muted);
  }
</style>
