{# Testimonials Section #}
<section class="testimonials" id="testimonials">
  <layout-center data-layout-max="wide">
    <layout-stack data-layout-gap="2xl">
      <header class="section-header">
        <h2>{{ testimonials.title | default('Loved by teams everywhere') }}</h2>
        <p>{{ testimonials.subtitle | default('See what our customers have to say about us.') }}</p>
      </header>

      <layout-grid data-layout-gap="l" data-min-width="300">
        {% for item in testimonials.items %}
        <layout-card class="testimonial-card">
          <layout-stack data-layout-gap="l">
            <blockquote>
              <p>"{{ item.quote }}"</p>
            </blockquote>
            <footer class="testimonial-footer">
              <user-avatar data-name="{{ item.author }}" data-size="md"></user-avatar>
              <div class="author-info">
                <cite class="author-name">{{ item.author }}</cite>
                <span class="author-role">{{ item.role }}{% if item.company %}, {{ item.company }}{% endif %}</span>
              </div>
            </footer>
          </layout-stack>
        </layout-card>
        {% endfor %}
      </layout-grid>
    </layout-stack>
  </layout-center>
</section>

<style>
  .testimonials {
    padding: var(--size-4xl) var(--size-l);
  }
  .testimonial-card {
    padding: var(--size-xl);
  }
  .testimonial-card blockquote {
    margin: 0;
    font-size: var(--font-size-lg);
    font-style: italic;
    line-height: var(--line-height-relaxed);
  }
  .testimonial-footer {
    display: flex;
    align-items: center;
    gap: var(--size-m);
  }
  .author-info {
    display: flex;
    flex-direction: column;
  }
  .author-name {
    font-style: normal;
    font-weight: var(--font-weight-semibold);
  }
  .author-role {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }
</style>
