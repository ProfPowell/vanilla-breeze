{# Features Section #}
<section class="features" id="features">
  <layout-center data-max-width="wide">
    <layout-stack data-gap="2xl">
      <header class="section-header">
        <h2>{{ features.title | default('Everything you need') }}</h2>
        <p>{{ features.subtitle | default('Powerful features to help you build better products faster.') }}</p>
      </header>

      <layout-grid data-gap="xl" data-min-width="300">
        {% for feature in features.items %}
        <layout-card class="feature-card">
          <layout-stack data-gap="m">
            <div class="icon-wrapper">
              <icon-wc name="{{ feature.icon }}" size="lg"></icon-wc>
            </div>
            <h3>{{ feature.title }}</h3>
            <p>{{ feature.description }}</p>
          </layout-stack>
        </layout-card>
        {% endfor %}
      </layout-grid>
    </layout-stack>
  </layout-center>
</section>

<style>
  .features {
    padding: var(--size-4xl) var(--size-l);
  }
  .section-header {
    text-align: center;
    max-width: 60ch;
    margin-inline: auto;
  }
  .section-header h2 {
    font-size: var(--font-size-3xl);
  }
  .section-header p {
    font-size: var(--font-size-lg);
    color: var(--color-text-muted);
  }
  .feature-card {
    padding: var(--size-xl);
  }
  .icon-wrapper {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary-subtle);
    border-radius: var(--radius-m);
    color: var(--color-primary);
  }
  .feature-card h3 {
    font-size: var(--font-size-lg);
  }
  .feature-card p {
    color: var(--color-text-muted);
  }
</style>
