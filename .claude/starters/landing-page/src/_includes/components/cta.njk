{# CTA Section #}
<section class="cta" id="cta">
  <layout-center data-layout-max="narrow">
    <layout-stack data-layout-gap="xl" data-layout-align="center">
      <h2>{{ cta.title | default('Ready to get started?') }}</h2>
      <p>{{ cta.subtitle | default('Join thousands of teams already using our platform.') }}</p>
      <layout-cluster data-layout-gap="m">
        <a href="{{ cta.primaryCtaLink | default('/signup/') }}" class="button primary large">
          {{ cta.primaryCta | default('Start Free Trial') }}
        </a>
        <a href="{{ cta.secondaryCtaLink | default('/contact/') }}" class="button ghost large">
          {{ cta.secondaryCta | default('Contact Sales') }}
        </a>
      </layout-cluster>
    </layout-stack>
  </layout-center>
</section>

<style>
  .cta {
    padding: var(--size-4xl) var(--size-l);
    text-align: center;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary));
    color: white;
  }
  .cta h2 {
    font-size: var(--font-size-3xl);
    color: inherit;
  }
  .cta p {
    font-size: var(--font-size-xl);
    opacity: 0.9;
  }
  .cta .large {
    padding: var(--size-m) var(--size-xl);
    font-size: var(--font-size-lg);
  }
  .cta .button.primary {
    background: white;
    color: var(--color-primary);
  }
  .cta .button.ghost {
    border-color: white;
    color: white;
  }
  .cta .button.ghost:hover {
    background: rgba(255, 255, 255, 0.1);
  }
</style>
