{# FAQ Section #}
<section class="faq" id="faq">
  <layout-center data-max-width="narrow">
    <layout-stack data-gap="2xl">
      <header class="section-header">
        <h2>{{ faq.title | default('Frequently asked questions') }}</h2>
        <p>{{ faq.subtitle | default('Everything you need to know about our product.') }}</p>
      </header>

      <accordion-wc>
        {% for item in faq.items %}
        <details>
          <summary>{{ item.question }}</summary>
          <div class="answer">
            <p>{{ item.answer }}</p>
          </div>
        </details>
        {% endfor %}
      </accordion-wc>
    </layout-stack>
  </layout-center>
</section>

<style>
  .faq {
    padding: var(--size-4xl) var(--size-l);
    background: var(--color-surface-raised);
  }
  .faq details {
    border-block-end: var(--border-width-thin) solid var(--color-border);
  }
  .faq summary {
    padding: var(--size-l) 0;
    font-weight: var(--font-weight-semibold);
    font-size: var(--font-size-lg);
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .faq summary::after {
    content: '+';
    font-size: var(--font-size-xl);
    color: var(--color-text-muted);
  }
  .faq details[open] summary::after {
    content: 'âˆ’';
  }
  .faq .answer {
    padding-block-end: var(--size-l);
    color: var(--color-text-muted);
    line-height: var(--line-height-relaxed);
  }
</style>
