{# Hero Section #}
<section class="hero" id="hero">
  <layout-center data-layout-max="narrow">
    <layout-stack data-layout-gap="xl" data-layout-align="center">
      <h1>{{ hero.tagline | default(site.tagline) }}</h1>
      <p class="subtitle">{{ hero.subtitle | default('Start building amazing products today with our powerful platform.') }}</p>
      <layout-cluster data-layout-gap="m">
        <a href="{{ hero.primaryCtaLink | default('#cta') }}" class="button primary large">
          {{ hero.primaryCta | default('Get Started Free') }}
        </a>
        <a href="{{ hero.secondaryCtaLink | default('#features') }}" class="button ghost large">
          {{ hero.secondaryCta | default('Learn More') }}
        </a>
      </layout-cluster>
    </layout-stack>
  </layout-center>
</section>

<style>
  .hero {
    padding: var(--size-4xl) var(--size-l);
    text-align: center;
    background: linear-gradient(to bottom, var(--color-surface), var(--color-surface-raised));
  }
  .hero h1 {
    font-size: clamp(var(--font-size-3xl), 8vw, var(--font-size-5xl));
    line-height: var(--line-height-tight);
    max-width: 20ch;
  }
  .hero .subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-text-muted);
    max-width: 50ch;
  }
  .hero .large {
    padding: var(--size-m) var(--size-xl);
    font-size: var(--font-size-lg);
  }
</style>
