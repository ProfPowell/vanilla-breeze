---
interface Props {
  title?: string;
  subtitle?: string;
  primaryCta?: string;
  primaryCtaLink?: string;
  secondaryCta?: string;
  secondaryCtaLink?: string;
}

const {
  title = 'Ready to get started?',
  subtitle = 'Join thousands of teams already using our platform.',
  primaryCta = 'Start Free Trial',
  primaryCtaLink = '/signup/',
  secondaryCta = 'Contact Sales',
  secondaryCtaLink = '/contact/',
} = Astro.props;
---

<section class="cta" id="cta">
  <layout-center data-max-width="narrow">
    <layout-stack data-gap="xl" data-align="center">
      <h2>{title}</h2>
      <p>{subtitle}</p>
      <layout-cluster data-gap="m">
        <a href={primaryCtaLink} class="button primary large">{primaryCta}</a>
        <a href={secondaryCtaLink} class="button ghost large">{secondaryCta}</a>
      </layout-cluster>
    </layout-stack>
  </layout-center>
</section>

<style>
  .cta {
    padding: var(--size-4xl) var(--size-l);
    text-align: center;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-primary-dark, var(--color-primary))
    );
    color: var(--color-primary-contrast, white);
  }

  h2 {
    font-size: var(--font-size-3xl);
    color: inherit;
  }

  p {
    font-size: var(--font-size-xl);
    opacity: 0.9;
  }

  .large {
    padding: var(--size-m) var(--size-xl);
    font-size: var(--font-size-lg);
  }

  .button.primary {
    background: white;
    color: var(--color-primary);
  }

  .button.primary:hover {
    background: var(--color-surface);
  }

  .button.ghost {
    border-color: white;
    color: white;
  }

  .button.ghost:hover {
    background: rgba(255, 255, 255, 0.1);
  }
</style>
