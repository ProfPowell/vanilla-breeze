---
interface Props {
  tagline: string;
  subtitle?: string;
  primaryCta?: string;
  primaryCtaLink?: string;
  secondaryCta?: string;
  secondaryCtaLink?: string;
}

const {
  tagline,
  subtitle = 'Start building amazing products today with our powerful platform.',
  primaryCta = 'Get Started Free',
  primaryCtaLink = '#cta',
  secondaryCta = 'Learn More',
  secondaryCtaLink = '#features',
} = Astro.props;
---

<section class="hero" id="hero">
  <layout-center data-layout-max="narrow">
    <layout-stack data-layout-gap="xl" data-layout-align="center">
      <h1>{tagline}</h1>
      <p class="subtitle">{subtitle}</p>
      <layout-cluster data-layout-gap="m">
        <a href={primaryCtaLink} class="button primary large">{primaryCta}</a>
        <a href={secondaryCtaLink} class="button ghost large">{secondaryCta}</a>
      </layout-cluster>
    </layout-stack>
  </layout-center>
</section>

<style>
  .hero {
    padding: var(--size-4xl) var(--size-l);
    text-align: center;
    background: linear-gradient(
      to bottom,
      var(--color-surface),
      var(--color-surface-raised)
    );
  }

  h1 {
    font-size: clamp(var(--font-size-3xl), 8vw, var(--font-size-5xl));
    line-height: var(--line-height-tight);
    max-width: 20ch;
  }

  .subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-text-muted);
    max-width: 50ch;
  }

  .large {
    padding: var(--size-m) var(--size-xl);
    font-size: var(--font-size-lg);
  }
</style>
