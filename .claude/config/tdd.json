{
  "mode": "advisory",
  "testDirectory": "test",
  "testSuffix": ".test",
  "skipPatterns": [
    "*.config.js",
    "*.config.ts",
    "*.config.mjs",
    "*.d.ts",
    "*.generated.*",
    "*.g.ts",
    "dist/**",
    "node_modules/**",
    "fixtures/**",
    "__mocks__/**"
  ],
  "testablePatterns": [
    "src/**/*.js",
    "src/**/*.ts",
    "lib/**/*.js",
    "lib/**/*.ts",
    ".claude/scripts/*.js"
  ],
  "compose": {
    "src/services/*": "backend-testing",
    "src/api/*": "backend-testing",
    "src/routes/*": "backend-testing",
    "src/components/*": "unit-testing",
    ".claude/scripts/*": "unit-testing",
    "default": "unit-testing"
  }
}
