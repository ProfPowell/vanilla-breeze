---
/**
 * Content Division (<div>) Element Documentation
 *
 * Generic block-level container with no semantic meaning.
 */
import ElementLayout from '../../../../layouts/ElementLayout.astro';

// Code examples as template strings
const basicDivCode = `<div>...</div>`;
---

<ElementLayout
  title="div"
  description="Generic block-level container with no semantic meaning."
  elementName="div"
  category="native"
  nativeGroup="Text Content"
  currentPath="/docs/elements/native/div/"
>
  <!-- Description Section -->
  <section>
    <h2>Description</h2>
    <p>The <code>&lt;div&gt;</code> element is part of the Text Content category in HTML.</p>
  </section>

  <!-- Basic Example Section -->
  <section>
    <h2>Basic Example</h2>
    <div class="example">
      <div>Example div content</div>
    </div>
    <code-block language="html" label="Basic div example">{basicDivCode}</code-block>
  </section>

  <!-- Attributes Section -->
  <section>
    <h2>Attributes</h2>
    <p>This element supports <a href="/docs/elements/native/states/">global attributes</a>.</p>
  </section>

  <!-- Accessibility Section -->
  <section>
    <h2>Accessibility</h2>
    <p>Accessibility considerations for the <code>&lt;div&gt;</code> element will be documented here.</p>
  </section>

  <!-- Related Elements Section -->
  <section>
    <h2>Related Elements</h2>
    <p>Related elements will be documented here.</p>
  </section>
</ElementLayout>
