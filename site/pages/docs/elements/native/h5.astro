---
/**
 * Heading Level 5 (<h5>) Element Documentation
 *
 * Fifth-level heading for fine-grained sections.
 */
import ElementLayout from '../../../../layouts/ElementLayout.astro';

// Code examples as template strings
const basicExampleCode = `<h5>...</h5>`;
---

<ElementLayout
  title="h5"
  description="Fifth-level heading for fine-grained sections."
  elementName="h5"
  category="native"
  nativeGroup="Headings"
  currentPath="/docs/elements/native/h5/"
>
  <!-- Description Section -->
  <section>
    <h2>Description</h2>
    <p>The <code>&lt;h5&gt;</code> element is part of the Headings category in HTML.</p>
  </section>

  <!-- Basic Example Section -->
  <section>
    <h2>Basic Example</h2>
    <div class="example">
      <h5>Example h5 content</h5>
    </div>
    <code-block language="html" label="Basic h5 example">{basicExampleCode}</code-block>
  </section>

  <!-- Attributes Section -->
  <section>
    <h2>Attributes</h2>
    <p>This element supports <a href="/docs/elements/native/states/">global attributes</a>.</p>
  </section>

  <!-- Accessibility Section -->
  <section>
    <h2>Accessibility</h2>
    <p>Accessibility considerations for the <code>&lt;h5&gt;</code> element will be documented here.</p>
  </section>

  <!-- Related Elements Section -->
  <section>
    <h2>Related Elements</h2>
    <p>Related elements will be documented here.</p>
  </section>
</ElementLayout>
