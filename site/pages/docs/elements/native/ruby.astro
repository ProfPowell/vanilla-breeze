---
/**
 * Ruby Annotation (<ruby>) Element Documentation
 *
 * The ruby element represents a ruby annotation for East Asian typography.
 */
import ElementLayout from '../../../../layouts/ElementLayout.astro';

// Code examples as template strings
const basicRubyCode = `<ruby>
  漢 <rp>(</rp><rt>かん</rt><rp>)</rp>
  字 <rp>(</rp><rt>じ</rt><rp>)</rp>
</ruby>`;

const japaneseCode = `<p>
  <ruby>東京<rp>(</rp><rt>とうきょう</rt><rp>)</rp></ruby>は日本の首都です。
</p>`;

const chineseCode = `<p>
  <ruby>
    北京 <rp>(</rp><rt>Běijīng</rt><rp>)</rp>
  </ruby>
  is the capital of China.
</p>`;

const multipleRubyCode = `<p>
  <ruby>明日<rp>(</rp><rt>あした</rt><rp>)</rp></ruby>の
  <ruby>天気<rp>(</rp><rt>てんき</rt><rp>)</rp></ruby>は
  <ruby>晴<rp>(</rp><rt>は</rt><rp>)</rp></ruby>れです。
</p>`;

const styledRubyCode = `<style>
  ruby { ruby-position: under; }
