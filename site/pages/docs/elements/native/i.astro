  <section>
    <h2>Basic Example</h2>
    <div class="example">
      <i>Example i content</i>
    </div>
    <code-block language="html" label="Basic i example">{basicExample}</code-block>
  </section>

  <section>
    <h2>Attributes</h2>
    <p>This element supports <a href="/docs/elements/native/states/">global attributes</a>.</p>
  </section>

  <section>
    <h2>Accessibility</h2>
