---
/**
 * Heading Level 4 (<h4>) Element Documentation
 *
 * Fourth-level heading for sub-subsections.
 */
import ElementLayout from '../../../../layouts/ElementLayout.astro';

// Code examples as template strings
const basicExampleCode = `<h4>...</h4>`;
---

<ElementLayout
  title="h4"
  description="Fourth-level heading for sub-subsections."
  elementName="h4"
  category="native"
  nativeGroup="Headings"
  currentPath="/docs/elements/native/h4/"
>
  <!-- Description Section -->
  <section>
    <h2>Description</h2>
    <p>The <code>&lt;h4&gt;</code> element is part of the Headings category in HTML.</p>
  </section>

  <!-- Basic Example Section -->
  <section>
    <h2>Basic Example</h2>
    <div class="example">
      <h4>Example h4 content</h4>
    </div>
    <code-block language="html" label="Basic h4 example">{basicExampleCode}</code-block>
  </section>

  <!-- Attributes Section -->
  <section>
    <h2>Attributes</h2>
    <p>This element supports <a href="/docs/elements/native/states/">global attributes</a>.</p>
  </section>

  <!-- Accessibility Section -->
  <section>
    <h2>Accessibility</h2>
    <p>Accessibility considerations for the <code>&lt;h4&gt;</code> element will be documented here.</p>
  </section>

  <!-- Related Elements Section -->
  <section>
    <h2>Related Elements</h2>
    <p>Related elements will be documented here.</p>
  </section>
</ElementLayout>
