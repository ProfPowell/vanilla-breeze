---
/**
 * Metadata (<meta>) Element Documentation
 *
 * Provides metadata about the document for browsers and search engines.
 */
import ElementLayout from '../../../../layouts/ElementLayout.astro';

// Code examples as template strings
const basicExample = `<meta>`;
---

<ElementLayout
  title="meta"
  description="Provides metadata about the document for browsers and search engines."
  elementName="meta"
  category="native"
  nativeGroup="Document"
  currentPath="/docs/elements/native/meta/"
>
  <!-- Description Section -->
  <section>
    <h2>Description</h2>
    <p>The <code>&lt;meta&gt;</code> element is part of the Document category in HTML.</p>
  </section>

  <!-- Basic Example Section -->
  <section>
    <h2>Basic Example</h2>
    <code-block language="html" label="Basic meta example">{basicExample}</code-block>
  </section>

  <!-- Attributes Section -->
  <section>
    <h2>Attributes</h2>
    <p>This element supports <a href="/docs/elements/native/states/">global attributes</a>.</p>
  </section>

  <!-- Accessibility Section -->
  <section>
    <h2>Accessibility</h2>
    <p>Accessibility considerations for the <code>&lt;meta&gt;</code> element will be documented here.</p>
  </section>

  <!-- Related Elements Section -->
  <section>
    <h2>Related Elements</h2>
    <p>Related elements will be documented here.</p>
  </section>
</ElementLayout>
