---
/**
 * Heading Level 3 (<h3>) Element Documentation
 *
 * Third-level heading for subsections.
 */
import ElementLayout from '../../../../layouts/ElementLayout.astro';

// Code examples as template strings
const basicExampleCode = `<h3>...</h3>`;
---

<ElementLayout
  title="h3"
  description="Third-level heading for subsections."
  elementName="h3"
  category="native"
  nativeGroup="Headings"
  currentPath="/docs/elements/native/h3/"
>
  <!-- Description Section -->
  <section>
    <h2>Description</h2>
    <p>The <code>&lt;h3&gt;</code> element is part of the Headings category in HTML.</p>
  </section>

  <!-- Basic Example Section -->
  <section>
    <h2>Basic Example</h2>
    <div class="example">
      <h3>Example h3 content</h3>
    </div>
    <code-block language="html" label="Basic h3 example">{basicExampleCode}</code-block>
  </section>

  <!-- Attributes Section -->
  <section>
    <h2>Attributes</h2>
    <p>This element supports <a href="/docs/elements/native/states/">global attributes</a>.</p>
  </section>

  <!-- Accessibility Section -->
  <section>
    <h2>Accessibility</h2>
    <p>Accessibility considerations for the <code>&lt;h3&gt;</code> element will be documented here.</p>
  </section>

  <!-- Related Elements Section -->
  <section>
    <h2>Related Elements</h2>
    <p>Related elements will be documented here.</p>
  </section>
</ElementLayout>
