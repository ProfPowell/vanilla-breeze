---
/**
 * Heading Level 1 (<h1>) Element Documentation
 *
 * Top-level heading representing the main topic of the page.
 */
import ElementLayout from '../../../../layouts/ElementLayout.astro';

// Code examples as template strings
const basicExampleCode = `<h1>...</h1>`;
---

<ElementLayout
  title="h1"
  description="Top-level heading representing the main topic of the page."
  elementName="h1"
  category="native"
  nativeGroup="Headings"
  currentPath="/docs/elements/native/h1/"
>
  <!-- Description Section -->
  <section>
    <h2>Description</h2>
    <p>The <code>&lt;h1&gt;</code> element is part of the Headings category in HTML.</p>
  </section>

  <!-- Basic Example Section -->
  <section>
    <h2>Basic Example</h2>
    <div class="example">
      <h1>Example h1 content</h1>
    </div>
    <code-block language="html" label="Basic h1 example">{basicExampleCode}</code-block>
  </section>

  <!-- Attributes Section -->
  <section>
    <h2>Attributes</h2>
    <p>This element supports <a href="/docs/elements/native/states/">global attributes</a>.</p>
  </section>

  <!-- Accessibility Section -->
  <section>
    <h2>Accessibility</h2>
    <p>Accessibility considerations for the <code>&lt;h1&gt;</code> element will be documented here.</p>
  </section>

  <!-- Related Elements Section -->
  <section>
    <h2>Related Elements</h2>
    <p>Related elements will be documented here.</p>
  </section>
</ElementLayout>
