---
/**
 * Native Elements Index
 *
 * Standard HTML5 elements with Vanilla Breeze styling.
 */
import DocsLayout from '../../../../layouts/DocsLayout.astro';

const categories = {
  'Text Content': [
    { name: 'p', href: '/docs/elements/native/p/', desc: 'Paragraph' },
    { name: 'h1-h6', href: '/docs/elements/native/h1/', desc: 'Headings' },
    { name: 'blockquote', href: '/docs/elements/native/blockquote/', desc: 'Block quotation' },
    { name: 'pre', href: '/docs/elements/native/pre/', desc: 'Preformatted text' },
    { name: 'hr', href: '/docs/elements/native/hr/', desc: 'Thematic break' },
  ],
  'Inline Text': [
    { name: 'a', href: '/docs/elements/native/a/', desc: 'Anchor/link' },
    { name: 'strong', href: '/docs/elements/native/strong/', desc: 'Strong importance' },
    { name: 'em', href: '/docs/elements/native/em/', desc: 'Emphasis' },
    { name: 'code', href: '/docs/elements/native/code/', desc: 'Code fragment' },
    { name: 'mark', href: '/docs/elements/native/mark/', desc: 'Highlighted text' },
    { name: 'kbd', href: '/docs/elements/native/kbd/', desc: 'Keyboard input' },
    { name: 'abbr', href: '/docs/elements/native/abbr/', desc: 'Abbreviation' },
  ],
  'Lists': [
    { name: 'ul', href: '/docs/elements/native/ul/', desc: 'Unordered list' },
    { name: 'ol', href: '/docs/elements/native/ol/', desc: 'Ordered list' },
    { name: 'li', href: '/docs/elements/native/li/', desc: 'List item' },
    { name: 'dl', href: '/docs/elements/native/dl/', desc: 'Description list' },
    { name: 'dt', href: '/docs/elements/native/dt/', desc: 'Description term' },
    { name: 'dd', href: '/docs/elements/native/dd/', desc: 'Description details' },
  ],
  'Forms': [
    { name: 'form', href: '/docs/elements/native/form/', desc: 'Form container' },
    { name: 'input', href: '/docs/elements/native/input/', desc: 'Input field' },
    { name: 'button', href: '/docs/elements/native/button/', desc: 'Button' },
    { name: 'select', href: '/docs/elements/native/select/', desc: 'Dropdown select' },
    { name: 'textarea', href: '/docs/elements/native/textarea/', desc: 'Multi-line text' },
    { name: 'label', href: '/docs/elements/native/label/', desc: 'Form label' },
    { name: 'fieldset', href: '/docs/elements/native/fieldset/', desc: 'Field grouping' },
  ],
  'Tables': [
    { name: 'table', href: '/docs/elements/native/table/', desc: 'Table container' },
    { name: 'thead', href: '/docs/elements/native/thead/', desc: 'Table header' },
    { name: 'tbody', href: '/docs/elements/native/tbody/', desc: 'Table body' },
    { name: 'tr', href: '/docs/elements/native/tr/', desc: 'Table row' },
    { name: 'th', href: '/docs/elements/native/th/', desc: 'Header cell' },
    { name: 'td', href: '/docs/elements/native/td/', desc: 'Data cell' },
  ],
  'Sectioning': [
    { name: 'header', href: '/docs/elements/native/header/', desc: 'Header section' },
    { name: 'nav', href: '/docs/elements/native/nav/', desc: 'Navigation' },
    { name: 'main', href: '/docs/elements/native/main/', desc: 'Main content' },
    { name: 'article', href: '/docs/elements/native/article/', desc: 'Article' },
    { name: 'section', href: '/docs/elements/native/section/', desc: 'Generic section' },
    { name: 'aside', href: '/docs/elements/native/aside/', desc: 'Aside content' },
    { name: 'footer', href: '/docs/elements/native/footer/', desc: 'Footer section' },
  ],
  'Media': [
    { name: 'img', href: '/docs/elements/native/img/', desc: 'Image' },
    { name: 'picture', href: '/docs/elements/native/picture/', desc: 'Responsive image' },
    { name: 'video', href: '/docs/elements/native/video/', desc: 'Video' },
    { name: 'audio', href: '/docs/elements/native/audio/', desc: 'Audio' },
    { name: 'figure', href: '/docs/elements/native/figure/', desc: 'Figure with caption' },
  ],
  'Interactive': [
    { name: 'details', href: '/docs/elements/native/details/', desc: 'Disclosure widget' },
    { name: 'summary', href: '/docs/elements/native/summary/', desc: 'Details summary' },
    { name: 'dialog', href: '/docs/elements/native/dialog/', desc: 'Dialog/modal' },
    { name: 'menu', href: '/docs/elements/native/menu/', desc: 'Menu container' },
  ],
};
---

<DocsLayout
  title="Native Elements"
  description="Standard HTML5 elements with Vanilla Breeze styling."
  currentSection="api"
>
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <a href="/docs/elements/">Elements</a> / <span aria-current="page">Native Elements</span>
  </nav>

  <h1>Native Elements</h1>
  <p class="lead">Standard HTML5 elements with Vanilla Breeze styling. These are the building blocks of semantic HTML.</p>

  {Object.entries(categories).map(([category, items]) => (
    <section>
      <h2>{category}</h2>
      <layout-grid data-layout-min="200px" data-layout-gap="s">
        {items.map(item => (
          <a href={item.href} class="section-card">
            <h3><code>&lt;{item.name}&gt;</code></h3>
            <p>{item.desc}</p>
          </a>
        ))}
      </layout-grid>
    </section>
  ))}

  <section>
    <h2>Related</h2>
    <layout-grid data-layout-min="200px" data-layout-gap="m">
      <a href="/docs/elements/" class="section-card">
        <h3>All Elements</h3>
        <p>Complete alphabetical index</p>
      </a>
      <a href="/docs/elements/custom-elements/" class="section-card">
        <h3>Custom Elements</h3>
        <p>CSS-only layout primitives</p>
      </a>
      <a href="/docs/elements/web-components/" class="section-card">
        <h3>Web Components</h3>
        <p>JavaScript-enhanced components</p>
      </a>
    </layout-grid>
  </section>
</DocsLayout>
