---
/**
 * form-field Element Documentation
 *
 * Accessible form field wrapper with label, input, and validation message.
 */
import ElementLayout from '../../../../layouts/ElementLayout.astro';

// Code examples as template strings
const structureCode = `form-field
+-- label          (required, with for attribute)
+-- input/textarea/select (required, with id matching label)
+-- output         (optional, for validation/help messages)`;

const basicCode = `<form-field>
  <label for="name">Full Name</label>
  <input type="text"
         id="name"
         name="name"
         required
         minlength="2"
         autocomplete="name"
         aria-describedby="name-msg" />
  <output id="name-msg" for="name" aria-live="polite">
    At least 2 characters required
  </output>
</form-field>`;

const outputClassesCode = `<!-- Hint message - always visible -->
<form-field>
  <label for="username">Username</label>
  <input type="text" id="username" name="username" required
         minlength="3" maxlength="20"
         aria-describedby="username-hint username-error" />
  <output id="username-hint" class="hint" for="username">
    3-20 characters, letters and numbers only.
  </output>
  <output id="username-error" class="error" for="username" aria-live="polite">
    Please enter a valid username.
  </output>
</form-field>`;

const passwordToggleCode = `<form-field>
  <label for="password">Password</label>
  <input type="password" id="password" name="password"
         required minlength="8"
         autocomplete="current-password"
         aria-describedby="password-msg" />
  <output id="password-msg" class="error" for="password" aria-live="polite">
    At least 8 characters required.
  </output>
</form-field>
<!-- JS auto-adds show/hide toggle button -->`;

const validationIconsCode = `<!-- Default: validation icons appear -->
<form-field>
  <label for="email">Email</label>
  <input type="email" id="email" name="email" required />
</form-field>

<!-- Opt-out: no validation icons -->
<form-field data-no-icon>
  <label for="search">Search</label>
  <input type="search" id="search" name="q" />
</form-field>`;

const otpInputCode = `<form-field data-no-icon>
  <label for="code">Verification code</label>
  <input type="text" id="code" name="code"
         data-type="otp" data-length="6"
         inputmode="numeric" pattern="[0-9]{6}"
         autocomplete="one-time-code" required
         aria-describedby="code-msg" />
  <output id="code-msg" class="hint" for="code" aria-live="polite">
    Enter the 6-digit code from your authenticator app.
  </output>
</form-field>
<!-- Works as text input without JS, multi-box with JS -->`;

const checkboxRadioCode = `<!-- Single Checkbox -->
<form-field data-type="checkbox">
  <label>
    <input type="checkbox" id="terms" name="terms" required />
    I agree to the Terms of Service
  </label>
</form-field>

<!-- Radio Group -->
<fieldset>
  <legend>Preferred Contact Method</legend>
  <layout-stack data-layout-gap="xs">
    <form-field data-type="radio">
      <label>
        <input type="radio" name="contact" value="email" required />
        Email
      </label>
    </form-field>
    <form-field data-type="radio">
      <label>
        <input type="radio" name="contact" value="phone" />
        Phone
      </label>
    </form-field>
  </layout-stack>
</fieldset>`;

const validationCssCode = `/* Valid state - green border after user interacts */
form-field:has(input:user-valid) {
  & input {
    border-color: var(--color-success);
  }
  & output {
    color: var(--color-success);
  }
}

/* Invalid state - red border after user interacts */
form-field:has(input:user-invalid) {
  & input {
    border-color: var(--color-error);
  }
  & output {
    color: var(--color-error);
  }
}`;

const completeFormCode = `<form action="/api/contact" method="POST">
  <layout-stack data-layout-gap="m">
    <form-field>
      <label for="name">Name</label>
      <input type="text"
             id="name"
             name="name"
             required
             minlength="2"
             autofocus
             autocomplete="name"
             aria-describedby="name-msg" />
      <output id="name-msg" for="name" aria-live="polite">
        Please enter your name
      </output>
    </form-field>

    <form-field>
      <label for="email">Email</label>
      <input type="email"
             id="email"
             name="email"
             required
             autocomplete="email"
             aria-describedby="email-msg" />
      <output id="email-msg" for="email" aria-live="polite">
        Please enter a valid email
      </output>
    </form-field>

    <form-field>
      <label for="message">Message</label>
      <textarea id="message"
                name="message"
                required
                minlength="10"
                rows="5"
                aria-describedby="message-msg"></textarea>
      <output id="message-msg" for="message" aria-live="polite">
        At least 10 characters
      </output>
    </form-field>

    <button type="submit">Send Message</button>
  </layout-stack>
</form>`;

const cssImplementation = `form-field {
  display: flex;
  flex-direction: column;
  gap: var(--size-xs);
}

form-field label:first-child {
  font-weight: var(--font-weight-medium);
}

form-field input:not([type="checkbox"]):not([type="radio"]),
form-field select,
form-field textarea {
  width: 100%;
  padding: var(--size-s) var(--size-m);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-m);
  transition: border-color 0.2s, box-shadow 0.2s;
}

form-field input:focus,
form-field select:focus,
form-field textarea:focus {
  outline: none;
  border-color: var(--color-interactive);
  box-shadow: 0 0 0 3px oklch(from var(--color-interactive) l c h / 0.15);
}

form-field output {
  font-size: var(--font-size-sm);
  color: var(--color-text-muted);
}

/* Validation states (CSS-only) */
form-field input:user-valid:not(:placeholder-shown),
form-field select:user-valid,
form-field textarea:user-valid:not(:placeholder-shown) {
  border-color: var(--color-success);
}

form-field input:user-invalid:not(:placeholder-shown),
form-field select:user-invalid,
form-field textarea:user-invalid:not(:placeholder-shown) {
  border-color: var(--color-error);
}

form-field input:user-invalid:not(:placeholder-shown) ~ output,
form-field select:user-invalid ~ output,
form-field textarea:user-invalid:not(:placeholder-shown) ~ output {
  color: var(--color-error);
}

/* Checkbox/Radio styling */
form-field[data-type="checkbox"] label,
form-field[data-type="radio"] label {
  display: flex;
  align-items: center;
  gap: var(--size-s);
  cursor: pointer;
}`;
---

<ElementLayout
  title="form-field"
  description="Accessible form field wrapper with label, input, and validation message. Enables CSS-only validation feedback using native HTML5 validation and the <output> element."
  elementName="form-field"
  category="custom"
  currentPath="/docs/elements/custom-elements/form-field/"
>
  <browser-window
    src="/docs/examples/demos/form-field-basic.html"
    url="https://vanilla-breeze.dev/form-field"
    title="Form Field Demo"
    shadow>
  </browser-window>

  <section>
    <h2>Attributes</h2>
    <table class="props-table">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Values</th>
          <th>Default</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>data-type</code></td>
          <td><code>checkbox</code>, <code>radio</code>, <code>file</code></td>
          <td>-</td>
          <td>Special styling for non-text inputs</td>
        </tr>
        <tr>
          <td><code>data-no-icon</code></td>
          <td>boolean</td>
          <td>-</td>
          <td>Disable validation status icons</td>
        </tr>
        <tr>
          <td><code>data-required</code></td>
          <td>boolean</td>
          <td>-</td>
          <td>Visual indicator (auto-detected from input)</td>
        </tr>
        <tr>
          <td><code>data-valid</code></td>
          <td>boolean</td>
          <td>-</td>
          <td>Force valid state styling</td>
        </tr>
        <tr>
          <td><code>data-invalid</code></td>
          <td>boolean</td>
          <td>-</td>
          <td>Force invalid state styling</td>
        </tr>
      </tbody>
    </table>

    <h3>Input Attributes (for JS enhancements)</h3>
    <table class="props-table">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Values</th>
          <th>Default</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>data-type</code> (on input)</td>
          <td><code>otp</code>, <code>pin</code></td>
          <td>-</td>
          <td>Enable OTP/PIN multi-box enhancement</td>
        </tr>
        <tr>
          <td><code>data-length</code> (on input)</td>
          <td><code>4</code>, <code>6</code>, <code>8</code></td>
          <td><code>6</code></td>
          <td>Number of digits for OTP/PIN input</td>
        </tr>
      </tbody>
    </table>
  </section>

  <section>
    <h2>Element Structure</h2>
    <p>The form-field element groups a label, input control, and optional validation message.</p>

    <code-block language="html" show-lines label="form-field element structure">{structureCode}</code-block>

    <table class="props-table">
      <thead>
        <tr>
          <th>Child Element</th>
          <th>Purpose</th>
          <th>Key Attributes</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>&lt;label&gt;</code></td>
          <td>Accessible field label</td>
          <td><code>for</code> (matches input <code>id</code>)</td>
        </tr>
        <tr>
          <td><code>&lt;input&gt;</code> / <code>&lt;textarea&gt;</code> / <code>&lt;select&gt;</code></td>
          <td>Form control</td>
          <td><code>id</code>, <code>name</code>, validation attrs, <code>aria-describedby</code></td>
        </tr>
        <tr>
          <td><code>&lt;output&gt;</code></td>
          <td>Validation/help message</td>
          <td><code>id</code>, <code>for</code>, <code>aria-live="polite"</code></td>
        </tr>
      </tbody>
    </table>
  </section>

  <section>
    <h2>Basic Text Input</h2>
    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <form-field>
          <label for="basic-name">Full Name</label>
          <input type="text"
                 id="basic-name"
                 name="name"
                 required
                 minlength="2"
                 autocomplete="name"
                 aria-describedby="basic-name-msg" />
          <output id="basic-name-msg" for="basic-name" aria-live="polite">
            At least 2 characters required
          </output>
        </form-field>
      </form>
    </div>

    <h3>Code</h3>
    <code-block language="html" show-lines label="Basic text input example">{basicCode}</code-block>
  </section>

  <section>
    <h2>Input Types</h2>

    <h3>Email Input</h3>
    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <form-field>
          <label for="email-demo">Email Address</label>
          <input type="email"
                 id="email-demo"
                 name="email"
                 required
                 autocomplete="email"
                 aria-describedby="email-demo-msg" />
          <output id="email-demo-msg" for="email-demo" aria-live="polite">
            Please enter a valid email address
          </output>
        </form-field>
      </form>
    </div>

    <h3>Password Input</h3>
    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <form-field>
          <label for="password-demo">Password</label>
          <input type="password"
                 id="password-demo"
                 name="password"
                 required
                 minlength="8"
                 autocomplete="new-password"
                 aria-describedby="password-demo-msg" />
          <output id="password-demo-msg" for="password-demo" aria-live="polite">
            At least 8 characters required
          </output>
        </form-field>
      </form>
    </div>

    <h3>Textarea</h3>
    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <form-field>
          <label for="message-demo">Message</label>
          <textarea id="message-demo"
                    name="message"
                    required
                    minlength="10"
                    rows="4"
                    aria-describedby="message-demo-msg"></textarea>
          <output id="message-demo-msg" for="message-demo" aria-live="polite">
            At least 10 characters required
          </output>
        </form-field>
      </form>
    </div>

    <h3>Select Dropdown</h3>
    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <form-field>
          <label for="category-demo">Category</label>
          <select id="category-demo" name="category" required>
            <option value="" disabled selected>Select a category...</option>
            <option value="general">General Inquiry</option>
            <option value="support">Technical Support</option>
            <option value="sales">Sales Question</option>
          </select>
        </form-field>
      </form>
    </div>
  </section>

  <section>
    <h2>Password Toggle</h2>
    <p>Password inputs are automatically enhanced with a show/hide toggle button when JavaScript is available. No extra markup is needed - just use <code>type="password"</code>.</p>

    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <form-field>
          <label for="pwd-toggle-demo">Password</label>
          <input type="password"
                 id="pwd-toggle-demo"
                 name="password"
                 required
                 minlength="8"
                 autocomplete="new-password"
                 aria-describedby="pwd-toggle-msg" />
          <output id="pwd-toggle-msg" class="error" for="pwd-toggle-demo" aria-live="polite">
            At least 8 characters required
          </output>
        </form-field>
      </form>
    </div>

    <p>The toggle button:</p>
    <ul>
      <li>Appears automatically when JavaScript loads</li>
      <li>Uses accessible ARIA attributes (<code>aria-pressed</code>, <code>aria-label</code>)</li>
      <li>Works alongside validation icons (positions adjust automatically)</li>
      <li>Preserves tab order and keyboard navigation</li>
    </ul>

    <h3>Code</h3>
    <code-block language="html" show-lines label="Password input with auto toggle">{passwordToggleCode}</code-block>
  </section>

  <section>
    <h2>Validation Status Icons</h2>
    <p>Form fields automatically display validation status icons after user interaction:</p>
    <ul>
      <li><strong>Checkmark</strong> appears when the field is valid</li>
      <li><strong>X</strong> appears when the field is invalid</li>
    </ul>
    <p>Icons are positioned inside the input's padding and adjust automatically for password fields with toggle buttons.</p>

    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <layout-stack data-layout-gap="m">
          <form-field>
            <label for="icon-email">Email (type and blur to see icons)</label>
            <input type="email"
                   id="icon-email"
                   name="email"
                   required
                   aria-describedby="icon-email-msg" />
            <output id="icon-email-msg" class="error" for="icon-email" aria-live="polite">
              Please enter a valid email
            </output>
          </form-field>
        </layout-stack>
      </form>
    </div>

    <h3>Disabling Icons</h3>
    <p>Use <code>data-no-icon</code> on the form-field to disable validation icons. Useful for search fields or other contexts where icons aren't needed.</p>

    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <form-field data-no-icon>
          <label for="search-no-icon">Search (no icons)</label>
          <input type="search" id="search-no-icon" name="q" placeholder="Search..." />
        </form-field>
      </form>
    </div>

    <h3>Code</h3>
    <code-block language="html" show-lines label="Validation icons opt-out">{validationIconsCode}</code-block>
  </section>

  <section>
    <h2>OTP/PIN Input</h2>
    <p>For verification codes, use <code>data-type="otp"</code> on the input. This creates a progressive enhancement pattern:</p>
    <ul>
      <li><strong>Without JavaScript:</strong> Works as a standard text input</li>
      <li><strong>With JavaScript:</strong> Enhances to a multi-box input with automatic focus management</li>
    </ul>

    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <form-field data-no-icon>
          <label for="otp-demo">Verification code</label>
          <input type="text"
                 id="otp-demo"
                 name="code"
                 data-type="otp"
                 data-length="6"
                 inputmode="numeric"
                 pattern="[0-9]{6}"
                 autocomplete="one-time-code"
                 required
                 aria-describedby="otp-demo-msg" />
          <output id="otp-demo-msg" class="hint" for="otp-demo" aria-live="polite">
            Enter the 6-digit code
          </output>
        </form-field>
      </form>
    </div>

    <h3>Features</h3>
    <ul>
      <li>Auto-focus moves to the next box after entering a digit</li>
      <li>Backspace moves focus to the previous box</li>
      <li>Arrow keys navigate between boxes</li>
      <li>Paste support fills multiple boxes at once</li>
      <li>Original input becomes hidden and stores the combined value</li>
    </ul>

    <h3>Code</h3>
    <code-block language="html" show-lines label="OTP input progressive enhancement">{otpInputCode}</code-block>

    <h3>4-Digit PIN Variant</h3>
    <div class="example" style="max-inline-size: 20rem;">
      <form>
        <form-field data-no-icon>
          <label for="pin-demo">PIN</label>
          <input type="text"
                 id="pin-demo"
                 name="pin"
                 data-type="pin"
                 data-length="4"
                 inputmode="numeric"
                 pattern="[0-9]{4}"
                 required
                 aria-describedby="pin-demo-msg" />
          <output id="pin-demo-msg" class="hint" for="pin-demo" aria-live="polite">
            Enter your 4-digit PIN
          </output>
        </form-field>
      </form>
    </div>
  </section>

  <section>
    <h2>Output Message Classes</h2>
    <p>Use <code>class="hint"</code> and <code>class="error"</code> on output elements for different message types:</p>

    <table class="props-table">
      <thead>
        <tr>
          <th>Class</th>
          <th>Visibility</th>
          <th>Use Case</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>.hint</code></td>
          <td>Always visible (hides when valid)</td>
          <td>Format requirements, help text</td>
        </tr>
        <tr>
          <td><code>.error</code></td>
          <td>Only when invalid</td>
          <td>Error messages</td>
        </tr>
      </tbody>
    </table>

    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <form-field>
          <label for="output-demo">Username</label>
          <input type="text"
                 id="output-demo"
                 name="username"
                 required
                 minlength="3"
                 maxlength="20"
                 pattern="[a-zA-Z0-9]+"
                 aria-describedby="output-demo-hint output-demo-error" />
          <output id="output-demo-hint" class="hint" for="output-demo">
            3-20 characters, letters and numbers only.
          </output>
          <output id="output-demo-error" class="error" for="output-demo" aria-live="polite">
            Please enter a valid username.
          </output>
        </form-field>
      </form>
    </div>

    <h3>Code</h3>
    <code-block language="html" show-lines label="Hint and error output messages">{outputClassesCode}</code-block>
  </section>

  <section>
    <h2>Checkbox and Radio</h2>

    <h3>Single Checkbox</h3>
    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <form-field data-type="checkbox">
          <label>
            <input type="checkbox"
                   id="terms-demo"
                   name="terms"
                   required />
            I agree to the <a href="#">Terms of Service</a>
          </label>
        </form-field>
      </form>
    </div>

    <h3>Radio Group</h3>
    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <fieldset>
          <legend>Preferred Contact Method</legend>
          <layout-stack data-layout-gap="xs">
            <form-field data-type="radio">
              <label>
                <input type="radio" name="contact" value="email" required />
                Email
              </label>
            </form-field>
            <form-field data-type="radio">
              <label>
                <input type="radio" name="contact" value="phone" />
                Phone
              </label>
            </form-field>
            <form-field data-type="radio">
              <label>
                <input type="radio" name="contact" value="mail" />
                Mail
              </label>
            </form-field>
          </layout-stack>
        </fieldset>
      </form>
    </div>

    <h3>Code</h3>
    <code-block language="html" show-lines label="Checkbox and radio button examples">{checkboxRadioCode}</code-block>
  </section>

  <section>
    <h2>CSS-Only Validation</h2>
    <p>The form-field element uses the <code>:user-valid</code> and <code>:user-invalid</code> pseudo-classes to show validation states only after user interaction. This prevents premature error states on page load.</p>

    <h3>Try It - Type and then clear each field</h3>
    <div class="example" style="max-inline-size: 25rem;">
      <form>
        <layout-stack data-layout-gap="m">
          <form-field>
            <label for="validation-email">Email (required)</label>
            <input type="email"
                   id="validation-email"
                   name="email"
                   required
                   placeholder="you@example.com"
                   aria-describedby="validation-email-msg" />
            <output id="validation-email-msg" for="validation-email" aria-live="polite">
              Enter a valid email address
            </output>
          </form-field>

          <form-field>
            <label for="validation-url">Website (optional)</label>
            <input type="url"
                   id="validation-url"
                   name="website"
                   placeholder="https://example.com"
                   aria-describedby="validation-url-msg" />
            <output id="validation-url-msg" for="validation-url" aria-live="polite">
              Include https://
            </output>
          </form-field>
        </layout-stack>
      </form>
    </div>

    <h3>How It Works</h3>
    <code-block language="css" show-lines label="CSS-only validation states">{validationCssCode}</code-block>
  </section>

  <section>
    <h2>Why Use &lt;output&gt; for Messages?</h2>
    <p>The <code>&lt;output&gt;</code> element is semantically ideal for validation messages:</p>

    <ul>
      <li><strong>Purpose-built:</strong> Represents the result of a calculation or user action</li>
      <li><strong>Native association:</strong> Has <code>for</code> attribute to link to input(s)</li>
      <li><strong>Accessible:</strong> Works naturally with <code>aria-live</code> for screen readers</li>
      <li><strong>Semantic distinction:</strong> Clearly different from static help text</li>
      <li><strong>No JavaScript required:</strong> Can show different states via CSS</li>
    </ul>

    <table class="props-table">
      <thead>
        <tr>
          <th>Approach</th>
          <th>Semantics</th>
          <th>Accessibility</th>
          <th>Recommendation</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>&lt;output&gt;</code></td>
          <td>Result of action</td>
          <td>Native support</td>
          <td>Recommended</td>
        </tr>
        <tr>
          <td><code>&lt;span class="error"&gt;</code></td>
          <td>None</td>
          <td>Manual ARIA needed</td>
          <td>Avoid</td>
        </tr>
        <tr>
          <td><code>&lt;div class="message"&gt;</code></td>
          <td>None</td>
          <td>Manual ARIA needed</td>
          <td>Avoid</td>
        </tr>
      </tbody>
    </table>
  </section>

  <section>
    <h2>Complete Contact Form</h2>
    <div class="example" style="max-inline-size: 30rem;">
      <form>
        <layout-stack data-layout-gap="m">
          <form-field>
            <label for="contact-name">Name</label>
            <input type="text"
                   id="contact-name"
                   name="name"
                   required
                   minlength="2"
                   autocomplete="name"
                   aria-describedby="contact-name-msg" />
            <output id="contact-name-msg" for="contact-name" aria-live="polite">
              Please enter your name (at least 2 characters)
            </output>
          </form-field>

          <form-field>
            <label for="contact-email">Email</label>
            <input type="email"
                   id="contact-email"
                   name="email"
                   required
                   autocomplete="email"
                   aria-describedby="contact-email-msg" />
            <output id="contact-email-msg" for="contact-email" aria-live="polite">
              Please enter a valid email address
            </output>
          </form-field>

          <form-field>
            <label for="contact-subject">Subject</label>
            <select id="contact-subject" name="subject" required>
              <option value="" disabled selected>Select a subject...</option>
              <option value="general">General Inquiry</option>
              <option value="support">Technical Support</option>
              <option value="feedback">Feedback</option>
            </select>
          </form-field>

          <form-field>
            <label for="contact-message">Message</label>
            <textarea id="contact-message"
                      name="message"
                      required
                      minlength="10"
                      rows="5"
                      aria-describedby="contact-message-msg"></textarea>
            <output id="contact-message-msg" for="contact-message" aria-live="polite">
              Please enter your message (at least 10 characters)
            </output>
          </form-field>

          <button type="submit">Send Message</button>
        </layout-stack>
      </form>
    </div>

    <h3>Code</h3>
    <code-block language="html" show-lines label="Complete contact form example">{completeFormCode}</code-block>
  </section>

  <section>
    <h2>Accessibility Checklist</h2>
    <p>When building forms with form-field, ensure:</p>

    <ul>
      <li>Every <code>&lt;input&gt;</code> has a <code>&lt;label&gt;</code> with matching <code>for</code>/<code>id</code></li>
      <li>Required fields use the <code>required</code> attribute</li>
      <li>Validation messages use <code>&lt;output&gt;</code> with <code>aria-live="polite"</code></li>
      <li>Inputs link to messages via <code>aria-describedby</code></li>
      <li>Form controls have appropriate <code>autocomplete</code> values</li>
      <li>Focus states are clearly visible</li>
      <li>Error states don't rely on color alone (include text)</li>
      <li>First input has <code>autofocus</code> for immediate interaction</li>
    </ul>
  </section>

  <section>
    <h2>HTML5 Validation Attributes</h2>
    <p>Use native validation attributes for client-side validation:</p>

    <table class="props-table">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Purpose</th>
          <th>Example</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>required</code></td>
          <td>Field must have value</td>
          <td><code>&lt;input required /&gt;</code></td>
        </tr>
        <tr>
          <td><code>minlength</code></td>
          <td>Minimum character count</td>
          <td><code>&lt;input minlength="2" /&gt;</code></td>
        </tr>
        <tr>
          <td><code>maxlength</code></td>
          <td>Maximum character count</td>
          <td><code>&lt;input maxlength="100" /&gt;</code></td>
        </tr>
        <tr>
          <td><code>pattern</code></td>
          <td>Regex pattern</td>
          <td><code>&lt;input pattern="[A-Za-z]+" /&gt;</code></td>
        </tr>
        <tr>
          <td><code>type</code></td>
          <td>Input type validation</td>
          <td><code>type="email"</code>, <code>type="url"</code></td>
        </tr>
        <tr>
          <td><code>min</code>/<code>max</code></td>
          <td>Number/date range</td>
          <td><code>&lt;input type="number" min="0" max="100" /&gt;</code></td>
        </tr>
      </tbody>
    </table>
  </section>

