---
/**
 * layout-cluster Element Documentation
 *
 * Horizontal flex layout with wrapping. Ideal for groups of inline elements.
 */
import ElementLayout from '../../../../layouts/ElementLayout.astro';

// Code examples as template strings
const gapVariantsCode = `<layout-cluster data-gap="xs">
  <button type="button">Button</button>
  <button type="button">Button</button>
  <button type="button">Button</button>
</layout-cluster>`;

const justifyVariantsCode = `<!-- Items aligned to start (default) -->
<layout-cluster data-justify="start">...</layout-cluster>

<!-- Items centered horizontally -->
<layout-cluster data-justify="center">...</layout-cluster>

<!-- Items aligned to end -->
<layout-cluster data-justify="end">...</layout-cluster>

<!-- Items spread with space between -->
<layout-cluster data-justify="between">...</layout-cluster>`;

const alignVariantsCode = `<!-- Items aligned to top -->
<layout-cluster data-align="start">...</layout-cluster>

<!-- Items centered vertically (default) -->
<layout-cluster data-align="center">...</layout-cluster>

<!-- Items aligned to bottom -->
<layout-cluster data-align="end">...</layout-cluster>

<!-- Items stretched to fill height -->
<layout-cluster data-align="stretch">...</layout-cluster>

<!-- Items aligned by text baseline -->
<layout-cluster data-align="baseline">...</layout-cluster>`;

const overlapCode = `<layout-cluster data-overlap>
  <user-avatar><img src="user1.jpg" alt="User 1" /></user-avatar>
  <user-avatar><img src="user2.jpg" alt="User 2" /></user-avatar>
  <user-avatar><img src="user3.jpg" alt="User 3" /></user-avatar>
  <user-avatar><span data-fallback>+3</span></user-avatar>
</layout-cluster>`;

const buttonGroupCode = `<layout-cluster data-gap="s">
  <button type="button">Save</button>
  <button type="button" class="secondary">Cancel</button>
  <button type="button" class="ghost">Reset</button>
</layout-cluster>`;

const tagCloudCode = `<layout-cluster data-gap="xs">
  <span class="tag">HTML</span>
  <span class="tag">CSS</span>
  <span class="tag">JavaScript</span>
</layout-cluster>`;

const cardFooterCode = `<layout-cluster data-gap="s" data-justify="between">
  <layout-cluster data-gap="xs">
    <button type="button">Edit</button>
    <button type="button">Delete</button>
  </layout-cluster>
  <button type="button">View Details</button>
</layout-cluster>`;

const navigationCode = `<layout-cluster data-gap="l" data-justify="between">
  <span class="logo">Logo</span>
  <layout-cluster data-gap="m">
    <a href="#">Home</a>
    <a href="#">About</a>
    <a href="#">Services</a>
    <a href="#">Contact</a>
  </layout-cluster>
</layout-cluster>`;

const cssImplementation = `layout-cluster {
  display: flex;
  flex-wrap: wrap;
  gap: var(--_gap, var(--size-s));
  align-items: var(--_align, center);
}

/* Gap variants */
layout-cluster[data-gap="xs"] { --_gap: var(--size-xs); }
layout-cluster[data-gap="s"] { --_gap: var(--size-s); }
layout-cluster[data-gap="m"] { --_gap: var(--size-m); }
layout-cluster[data-gap="l"] { --_gap: var(--size-l); }
layout-cluster[data-gap="xl"] { --_gap: var(--size-xl); }

/* Justify variants */
layout-cluster[data-justify="start"] { justify-content: flex-start; }
layout-cluster[data-justify="end"] { justify-content: flex-end; }
layout-cluster[data-justify="center"] { justify-content: center; }
layout-cluster[data-justify="between"] { justify-content: space-between; }

/* Align variants */
layout-cluster[data-align="start"] { --_align: flex-start; }
layout-cluster[data-align="end"] { --_align: flex-end; }
layout-cluster[data-align="center"] { --_align: center; }
layout-cluster[data-align="stretch"] { --_align: stretch; }
layout-cluster[data-align="baseline"] { --_align: baseline; }

/* No-wrap variant */
layout-cluster[data-nowrap] {
  flex-wrap: nowrap;
}`;
---

<ElementLayout
  title="layout-cluster"
  description="Horizontal flex layout with wrapping. Ideal for groups of inline elements like buttons, tags, and navigation items."
  elementName="layout-cluster"
  category="custom"
  currentPath="/docs/elements/custom-elements/cluster/"
>
  <browser-window
    src="/docs/examples/demos/cluster-basic.html"
    url="https://vanilla-breeze.dev/cluster"
    title="Cluster Layout Demo"
    shadow>
  </browser-window>

  <section>
    <h2>Attributes</h2>
    <table class="props-table">
      <thead>
        <tr>
          <th>Attribute</th>
          <th>Values</th>
          <th>Default</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>data-gap</code></td>
          <td><code>xs</code>, <code>s</code>, <code>m</code>, <code>l</code>, <code>xl</code></td>
          <td><code>s</code></td>
          <td>Controls the gap between items</td>
        </tr>
        <tr>
          <td><code>data-justify</code></td>
          <td><code>start</code>, <code>end</code>, <code>center</code>, <code>between</code></td>
          <td><code>start</code></td>
          <td>Controls horizontal distribution of items</td>
        </tr>
        <tr>
          <td><code>data-align</code></td>
          <td><code>start</code>, <code>end</code>, <code>center</code>, <code>stretch</code>, <code>baseline</code></td>
          <td><code>center</code></td>
          <td>Controls vertical alignment of items</td>
        </tr>
        <tr>
          <td><code>data-nowrap</code></td>
          <td>boolean</td>
          <td>-</td>
          <td>Prevents items from wrapping to new lines</td>
        </tr>
        <tr>
          <td><code>data-overlap</code></td>
          <td><code>xs</code>, <code>s</code>, <code>m</code>, <code>l</code>, or boolean</td>
          <td>-</td>
          <td>Creates overlapping items (for avatar groups, stacked cards)</td>
        </tr>
      </tbody>
    </table>
  </section>

  <section>
    <h2>Gap Variants</h2>
    <p>The <code>data-gap</code> attribute controls spacing between items.</p>

    <div class="example">
      <layout-stack data-gap="l">
        <div>
          <p><strong>data-gap="xs"</strong></p>
          <layout-cluster data-gap="xs">
            <button type="button">Button</button>
            <button type="button">Button</button>
            <button type="button">Button</button>
          </layout-cluster>
        </div>
        <div>
          <p><strong>data-gap="m"</strong></p>
          <layout-cluster data-gap="m">
            <button type="button">Button</button>
            <button type="button">Button</button>
            <button type="button">Button</button>
          </layout-cluster>
        </div>
        <div>
          <p><strong>data-gap="xl"</strong></p>
          <layout-cluster data-gap="xl">
            <button type="button">Button</button>
            <button type="button">Button</button>
            <button type="button">Button</button>
          </layout-cluster>
        </div>
      </layout-stack>
    </div>

    <h3>Code</h3>
    <code-block language="html" show-lines label="Cluster with gap variant">{gapVariantsCode}</code-block>
  </section>

  <section>
    <h2>Justify Variants</h2>
    <p>The <code>data-justify</code> attribute controls horizontal distribution.</p>

    <div class="example">
      <layout-stack data-gap="l">
        <div>
          <p><strong>data-justify="start"</strong> (default)</p>
          <layout-cluster data-gap="m" data-justify="start" style="background: var(--color-surface-raised); padding: var(--size-s); border-radius: var(--radius-s);">
            <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-s);">Tag 1</span>
            <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-s);">Tag 2</span>
            <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-s);">Tag 3</span>
          </layout-cluster>
        </div>
        <div>
          <p><strong>data-justify="center"</strong></p>
          <layout-cluster data-gap="m" data-justify="center" style="background: var(--color-surface-raised); padding: var(--size-s); border-radius: var(--radius-s);">
            <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-s);">Tag 1</span>
            <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-s);">Tag 2</span>
            <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-s);">Tag 3</span>
          </layout-cluster>
        </div>
        <div>
          <p><strong>data-justify="end"</strong></p>
          <layout-cluster data-gap="m" data-justify="end" style="background: var(--color-surface-raised); padding: var(--size-s); border-radius: var(--radius-s);">
            <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-s);">Tag 1</span>
            <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-s);">Tag 2</span>
            <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-s);">Tag 3</span>
          </layout-cluster>
        </div>
        <div>
          <p><strong>data-justify="between"</strong></p>
          <layout-cluster data-gap="m" data-justify="between" style="background: var(--color-surface-raised); padding: var(--size-s); border-radius: var(--radius-s);">
            <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-s);">Start</span>
            <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-s);">Middle</span>
            <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-s);">End</span>
          </layout-cluster>
        </div>
      </layout-stack>
    </div>

    <h3>Code</h3>
    <code-block language="html" show-lines label="Cluster justify variants">{justifyVariantsCode}</code-block>
  </section>

  <section>
    <h2>Align Variants</h2>
    <p>The <code>data-align</code> attribute controls vertical alignment.</p>

    <div class="example">
      <layout-grid data-min="15rem" data-gap="l">
        <div>
          <p><strong>data-align="start"</strong></p>
          <layout-cluster data-gap="m" data-align="start" style="background: var(--color-surface-raised); padding: var(--size-s); border-radius: var(--radius-s); min-block-size: 5rem;">
            <button type="button" class="small">Small</button>
            <button type="button">Default</button>
            <button type="button" class="large">Large</button>
          </layout-cluster>
        </div>
        <div>
          <p><strong>data-align="center"</strong> (default)</p>
          <layout-cluster data-gap="m" data-align="center" style="background: var(--color-surface-raised); padding: var(--size-s); border-radius: var(--radius-s); min-block-size: 5rem;">
            <button type="button" class="small">Small</button>
            <button type="button">Default</button>
            <button type="button" class="large">Large</button>
          </layout-cluster>
        </div>
        <div>
          <p><strong>data-align="end"</strong></p>
          <layout-cluster data-gap="m" data-align="end" style="background: var(--color-surface-raised); padding: var(--size-s); border-radius: var(--radius-s); min-block-size: 5rem;">
            <button type="button" class="small">Small</button>
            <button type="button">Default</button>
            <button type="button" class="large">Large</button>
          </layout-cluster>
        </div>
        <div>
          <p><strong>data-align="baseline"</strong></p>
          <layout-cluster data-gap="m" data-align="baseline" style="background: var(--color-surface-raised); padding: var(--size-s); border-radius: var(--radius-s); min-block-size: 5rem;">
            <span style="font-size: var(--font-size-sm);">Small</span>
            <span style="font-size: var(--font-size-lg);">Medium</span>
            <span style="font-size: var(--font-size-2xl);">Large</span>
          </layout-cluster>
        </div>
      </layout-grid>
    </div>

    <h3>Code</h3>
    <code-block language="html" show-lines label="Cluster align variants">{alignVariantsCode}</code-block>
  </section>

  <section>
    <h2>Overlap Variant</h2>
    <p>The <code>data-overlap</code> attribute creates overlapping items - useful for avatar groups and stacked card effects.</p>

    <div class="example">
      <layout-cluster data-overlap>
        <user-avatar>
          <img src="https://i.pravatar.cc/150?img=5" alt="User 1" />
        </user-avatar>
        <user-avatar>
          <img src="https://i.pravatar.cc/150?img=6" alt="User 2" />
        </user-avatar>
        <user-avatar>
          <img src="https://i.pravatar.cc/150?img=7" alt="User 3" />
        </user-avatar>
        <user-avatar>
          <span data-fallback>+3</span>
        </user-avatar>
      </layout-cluster>
    </div>

    <p>Control overlap amount with size values:</p>
    <div class="example">
      <layout-stack data-gap="m">
        <div>
          <p><strong>data-overlap="xs"</strong> (tight)</p>
          <layout-cluster data-overlap="xs">
            <user-avatar data-size="sm"><span data-fallback>1</span></user-avatar>
            <user-avatar data-size="sm"><span data-fallback>2</span></user-avatar>
            <user-avatar data-size="sm"><span data-fallback>3</span></user-avatar>
          </layout-cluster>
        </div>
        <div>
          <p><strong>data-overlap="m"</strong> (more overlap)</p>
          <layout-cluster data-overlap="m">
            <user-avatar data-size="sm"><span data-fallback>1</span></user-avatar>
            <user-avatar data-size="sm"><span data-fallback>2</span></user-avatar>
            <user-avatar data-size="sm"><span data-fallback>3</span></user-avatar>
          </layout-cluster>
        </div>
      </layout-stack>
    </div>

    <code-block language="html" show-lines label="Overlapping avatar group">{overlapCode}</code-block>
  </section>

  <section>
    <h2>Usage Examples</h2>

    <h3>Button Group</h3>
    <div class="example">
      <layout-cluster data-gap="s">
        <button type="button">Save</button>
        <button type="button" class="secondary">Cancel</button>
        <button type="button" class="ghost">Reset</button>
      </layout-cluster>
    </div>
    <code-block language="html" show-lines label="Button group">{buttonGroupCode}</code-block>

    <h3>Tag Cloud</h3>
    <div class="example">
      <layout-cluster data-gap="xs">
        <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-full);">HTML</span>
        <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-full);">CSS</span>
        <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-full);">JavaScript</span>
        <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-full);">Web Components</span>
        <span style="padding: var(--size-xs) var(--size-s); background: var(--color-interactive); color: white; border-radius: var(--radius-full);">Progressive Enhancement</span>
      </layout-cluster>
    </div>
    <code-block language="html" show-lines label="Tag cloud">{tagCloudCode}</code-block>

    <h3>Card Footer Actions</h3>
    <div class="example" style="max-inline-size: 25rem;">
      <layout-card data-variant="outlined">
        <layout-stack data-gap="m">
          <h3 style="margin: 0;">Card Title</h3>
          <p style="margin: 0; color: var(--color-text-muted);">Card content goes here.</p>
          <layout-cluster data-gap="s" data-justify="between">
            <layout-cluster data-gap="xs">
              <button type="button" class="ghost small">Edit</button>
              <button type="button" class="ghost small">Delete</button>
            </layout-cluster>
            <button type="button" class="small">View Details</button>
          </layout-cluster>
        </layout-stack>
      </layout-card>
    </div>
    <code-block language="html" show-lines label="Card footer with nested clusters">{cardFooterCode}</code-block>

    <h3>Navigation</h3>
    <div class="example">
      <layout-cluster data-gap="l" data-justify="between">
        <span style="font-weight: 600;">Logo</span>
        <layout-cluster data-gap="m">
          <a href="#">Home</a>
          <a href="#">About</a>
          <a href="#">Services</a>
          <a href="#">Contact</a>
        </layout-cluster>
      </layout-cluster>
    </div>
    <code-block language="html" show-lines label="Navigation bar">{navigationCode}</code-block>
  </section>

  <section>
    <h2>CSS Implementation</h2>
    <code-block language="css" show-lines label="layout-cluster CSS implementation">{cssImplementation}</code-block>
  </section>

  <section>
    <h2>Related Elements</h2>
    <ul>
      <li><a href="/docs/elements/custom-elements/stack/">layout-stack</a> - Vertical stacking layout</li>
      <li><a href="/docs/elements/custom-elements/grid/">layout-grid</a> - Auto-fit grid layout</li>
      <li><a href="/docs/elements/custom-elements/sidebar/">layout-sidebar</a> - Two-column layout with sidebar</li>
      <li><a href="/docs/elements/custom-elements/user-avatar/">user-avatar</a> - Avatar element for use with overlap</li>
    </ul>
  </section>
</ElementLayout>
