      <a href="/docs/examples/demos/tooltip-basic.html" class="section-card">
        <h3>Tooltip</h3>
        <p>Contextual tooltips</p>
      </a>
    </layout-grid>
  </section>

  <section>
    <h2>Form Demos</h2>
    <layout-grid data-min="200px" data-gap="m">
      <a href="/docs/examples/demos/form-validation.html" class="section-card" style="border: 2px solid var(--color-primary);">
        <h3>Form Validation</h3>
        <p>CSS-only :user-valid/:user-invalid patterns</p>
