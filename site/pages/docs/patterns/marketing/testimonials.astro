  <section>
    <h2>Layout Configuration</h2>
    <layout-text>
      <p>Common data attributes for testimonial sections:</p>
    </layout-text>

    <table class="props-table">
      <thead>
        <tr>
          <th>Element</th>
          <th>Attribute</th>
          <th>Values</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>layout-grid</code></td>
