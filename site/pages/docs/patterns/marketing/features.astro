  <section>
    <h2>Layout Configuration</h2>
    <layout-text>
      <p>Common data attributes for feature sections:</p>
    </layout-text>

    <table class="props-table">
      <thead>
        <tr>
          <th>Element</th>
          <th>Attribute</th>
          <th>Values</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><code>layout-grid</code></td>
          <td><code>data-min</code></td>
          <td>CSS length (e.g., <code>250px</code>, <code>280px</code>)</td>
          <td>Minimum width for each grid column before wrapping.</td>
        </tr>
        <tr>
          <td><code>layout-grid</code></td>
          <td><code>data-gap</code></td>
          <td><code>xs</code> <code>s</code> <code>m</code> <code>l</code> <code>xl</code></td>
