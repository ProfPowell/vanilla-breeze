---
import DocsLayout from '../../../../layouts/DocsLayout.astro';

const featureCardStyles = `.feature-card {
  background: var(--color-surface-raised);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-l);
  padding: var(--size-l);
  transition: box-shadow 0.2s ease, border-color 0.2s ease;
}

.feature-card:hover {
  box-shadow: var(--shadow-m);
  border-color: var(--color-border-strong);
}`;

const featureIconStyles = `.feature-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 3rem;
  height: 3rem;
  background: var(--color-interactive-subtle);
  color: var(--color-interactive);
  border-radius: var(--radius-m);
}`;

const alternatingRowStyles = `.feature-row:nth-child(even) layout-sidebar {
  flex-direction: row-reverse;
}`;

const checkmarkListStyles = `.checkmark-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.checkmark-list li {
  display: flex;
  align-items: flex-start;
  gap: var(--size-s);
  padding: var(--size-xs) 0;
}

.checkmark-list icon-wc {
  color: var(--color-success);
  flex-shrink: 0;
  margin-top: 0.125em;
}`;
---

<DocsLayout
  title="Feature Patterns"
  description="Feature section patterns for marketing sites. Icon grids, alternating layouts, card grids, and feature highlights."
  currentSection="examples"
>
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <a href="/docs/patterns/">Patterns</a> / <a href="/docs/patterns/marketing/">Marketing</a> / <span aria-current="page">Features</span>
