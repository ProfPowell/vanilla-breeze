---
import PatternLayout from '../../../../layouts/PatternLayout.astro';

const simpleFooterCode = `<footer class="site-footer">
  <layout-stack data-gap="m">
    <layout-cluster data-justify="space-between" data-align="center">
      <layout-cluster data-gap="m" data-align="center">
        <a href="/"><brand-mark>Acme Co</brand-mark></a>
        <nav aria-label="Footer navigation">
          <layout-cluster data-gap="s">
            <a href="/about/">About</a>
            <a href="/blog/">Blog</a>
            <a href="/careers/">Careers</a>
            <a href="/contact/">Contact</a>
          </layout-cluster>
        </nav>
      </layout-cluster>
      <layout-cluster data-gap="s" class="social-links">
        <a href="https://github.com" aria-label="GitHub">
          <icon-wc name="github"></icon-wc>
        </a>
        <a href="https://twitter.com" aria-label="Twitter">
          <icon-wc name="twitter"></icon-wc>
        </a>
        <a href="https://linkedin.com" aria-label="LinkedIn">
          <icon-wc name="linkedin"></icon-wc>
        </a>
      </layout-cluster>
    </layout-cluster>
    <p class="copyright">&copy; 2024 Acme Co. All rights reserved.</p>
  </layout-stack>
</footer>`;

const multiColumnFooterCode = `<footer class="site-footer">
  <layout-stack data-gap="l">
    <layout-grid data-min="10rem" data-gap="xl">
      <nav aria-label="Company links">
        <layout-stack data-gap="m">
          <h3>Company</h3>
          <layout-stack data-gap="s">
            <a href="/about/">About</a>
            <a href="/careers/">Careers</a>
            <a href="/press/">Press</a>
            <a href="/news/">News</a>
          </layout-stack>
        </layout-stack>
      </nav>
      <nav aria-label="Product links">
        <layout-stack data-gap="m">
          <h3>Product</h3>
          <layout-stack data-gap="s">
            <a href="/features/">Features</a>
            <a href="/pricing/">Pricing</a>
            <a href="/integrations/">Integrations</a>
            <a href="/changelog/">Changelog</a>
          </layout-stack>
        </layout-stack>
      </nav>
      <nav aria-label="Resources links">
        <layout-stack data-gap="m">
          <h3>Resources</h3>
          <layout-stack data-gap="s">
            <a href="/docs/">Documentation</a>
            <a href="/guides/">Guides</a>
            <a href="/blog/">Blog</a>
            <a href="/support/">Support</a>
          </layout-stack>
        </layout-stack>
      </nav>
      <nav aria-label="Legal links">
        <layout-stack data-gap="m">
          <h3>Legal</h3>
          <layout-stack data-gap="s">
            <a href="/privacy/">Privacy</a>
            <a href="/terms/">Terms</a>
            <a href="/cookies/">Cookies</a>
            <a href="/licenses/">Licenses</a>
          </layout-stack>
        </layout-stack>
      </nav>
    </layout-grid>

    <div class="footer-bottom">
      <layout-cluster data-justify="space-between" data-align="center">
        <layout-cluster data-gap="m" data-align="center">
          <a href="/"><brand-mark>Acme Co</brand-mark></a>
          <p class="copyright">&copy; 2024 Acme Co. All rights reserved.</p>
        </layout-cluster>
        <layout-cluster data-gap="s" class="social-links">
          <a href="https://github.com" aria-label="GitHub">
            <icon-wc name="github"></icon-wc>
          </a>
          <a href="https://twitter.com" aria-label="Twitter">
            <icon-wc name="twitter"></icon-wc>
          </a>
          <a href="https://linkedin.com" aria-label="LinkedIn">
            <icon-wc name="linkedin"></icon-wc>
          </a>
          <a href="https://youtube.com" aria-label="YouTube">
            <icon-wc name="youtube"></icon-wc>
          </a>
        </layout-cluster>
      </layout-cluster>
    </div>
  </layout-stack>
</footer>`;

const newsletterFooterCode = `<footer class="site-footer">
  <layout-stack data-gap="l">
    <layout-sidebar data-gap="2xl" data-sidebar-width="wide" data-content-min="50">
      <section class="newsletter-section">
        <layout-stack data-gap="m">
          <h3>Subscribe to our newsletter</h3>
          <p>Get the latest updates, tips, and news delivered to your inbox.</p>
          <form action="/subscribe" method="POST">
            <layout-cluster data-gap="s">
              <form-field>
                <label for="email" class="sr-only">Email address</label>
                <input type="email" id="email" name="email" required
                       autocomplete="email" placeholder="Enter your email" />
              </form-field>
              <button type="submit">Subscribe</button>
            </layout-cluster>
          </form>
          <p class="text-sm text-muted">
            By subscribing, you agree to our <a href="/privacy/">Privacy Policy</a>.
          </p>
        </layout-stack>
      </section>

      <layout-grid data-min="8rem" data-gap="xl">
        <nav aria-label="Product links">
          <layout-stack data-gap="m">
            <h4>Product</h4>
            <layout-stack data-gap="s">
              <a href="/features/">Features</a>
              <a href="/pricing/">Pricing</a>
              <a href="/integrations/">Integrations</a>
            </layout-stack>
          </layout-stack>
        </nav>
        <nav aria-label="Resources links">
          <layout-stack data-gap="m">
            <h4>Resources</h4>
            <layout-stack data-gap="s">
              <a href="/docs/">Documentation</a>
              <a href="/guides/">Guides</a>
              <a href="/blog/">Blog</a>
            </layout-stack>
          </layout-stack>
        </nav>
        <nav aria-label="Company links">
          <layout-stack data-gap="m">
            <h4>Company</h4>
            <layout-stack data-gap="s">
              <a href="/about/">About</a>
              <a href="/careers/">Careers</a>
              <a href="/contact/">Contact</a>
            </layout-stack>
          </layout-stack>
        </nav>
      </layout-grid>
    </layout-sidebar>

    <div class="footer-bottom">
      <layout-cluster data-justify="space-between" data-align="center">
        <layout-cluster data-gap="m" data-align="center">
          <a href="/"><brand-mark>Acme Co</brand-mark></a>
          <p class="copyright">&copy; 2024 Acme Co. All rights reserved.</p>
        </layout-cluster>
        <layout-cluster data-gap="s" class="social-links">
          <a href="https://github.com" aria-label="GitHub">
            <icon-wc name="github"></icon-wc>
          </a>
          <a href="https://twitter.com" aria-label="Twitter">
            <icon-wc name="twitter"></icon-wc>
          </a>
          <a href="https://linkedin.com" aria-label="LinkedIn">
            <icon-wc name="linkedin"></icon-wc>
          </a>
        </layout-cluster>
      </layout-cluster>
    </div>
  </layout-stack>
</footer>`;

const footerStylesCode = `.site-footer {
  background: var(--color-surface-raised);
  border-block-start: var(--border-width-thin) solid var(--color-border);
  padding: var(--size-l) var(--size-xl);
}

.site-footer nav a {
  color: var(--color-text-muted);
  text-decoration: none;
  transition: color var(--duration-fast) var(--ease-default);
}

.site-footer nav a:hover {
  color: var(--color-text);
}

.site-footer .copyright {
  color: var(--color-text-muted);
  font-size: var(--font-size-sm);
}

.social-links a {
  color: var(--color-text-muted);
  transition: color var(--duration-fast) var(--ease-default);
}

.social-links a:hover {
  color: var(--color-text);
}`;

const multiColumnStylesCode = `/* Multi-column footer styles */
.site-footer {
  padding: var(--size-2xl) var(--size-xl);
}

.site-footer h3 {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-semibold);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--color-text-muted);
  margin: 0;
}

.site-footer nav a {
  font-size: var(--font-size-sm);
}

.footer-bottom {
  border-block-start: var(--border-width-thin) solid var(--color-border);
  padding-block-start: var(--size-l);
  margin-block-start: var(--size-xl);
}`;

const newsletterStylesCode = `/* Newsletter section styles */
.newsletter-section h3 {
  font-size: var(--font-size-lg);
  margin: 0;
}

.newsletter-section p {
  color: var(--color-text-muted);
  font-size: var(--font-size-sm);
}

/* Column headings for newsletter footer */
.site-footer h4 {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-semibold);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--color-text-muted);
  margin: 0;
}`;
---

<PatternLayout
  title="Footer Patterns"
  description="Footer navigation patterns with links, social icons, multi-column layouts, and newsletter signup forms."
  patternName="Footer"
  category="navigation"
  currentPath="/docs/patterns/navigation/footer/"
>
  <section>
    <h2>Overview</h2>
    <layout-text>
      <p>Footers provide secondary navigation, legal links, and brand information at the bottom of pages. These patterns use semantic <code>&lt;footer&gt;</code> and <code>&lt;nav&gt;</code> elements with <code>aria-label</code> for accessibility.</p>
      <p><strong>Key features:</strong></p>
      <ul>
        <li>Semantic HTML with proper ARIA attributes for screen readers</li>
        <li>Responsive layouts using <code>layout-grid</code> and <code>layout-sidebar</code></li>
        <li>Social media icons with accessible labels</li>
        <li>Newsletter signup with <code>form-field</code> component</li>
        <li>Flexible column arrangements that adapt to viewport width</li>
      </ul>
    </layout-text>
  </section>

  <section>
    <h2>Simple Footer</h2>
    <layout-text>
      <p>A compact footer with horizontal links, logo, and social icons. Uses <code>layout-cluster</code> for flexible horizontal spacing that wraps gracefully on smaller screens.</p>
    </layout-text>

    <browser-window
      src="/docs/patterns/demos/footer-simple.html"
      url="https://vanilla-breeze.dev/footer-simple"
      title="Simple Footer"
      shadow>
    </browser-window>

    <code-block language="html" label="Simple footer with horizontal links">{simpleFooterCode}</code-block>
  </section>

  <section>
    <h2>Multi-Column Footer</h2>
    <layout-text>
      <p>A comprehensive footer with organized link categories in columns. Uses <code>layout-grid</code> with <code>data-min="10rem"</code> to create responsive columns that automatically adjust based on available space.</p>
    </layout-text>

    <browser-window
      src="/docs/patterns/demos/footer-multi-column.html"
      url="https://vanilla-breeze.dev/footer-multi-column"
      title="Multi-Column Footer"
      shadow>
    </browser-window>

    <code-block language="html" label="Multi-column footer with link categories">{multiColumnFooterCode}</code-block>

    <h3>Multi-Column Styles</h3>
    <layout-text>
      <p>Additional styles for the multi-column layout, including uppercase headings and the bottom separator:</p>
    </layout-text>

    <code-block language="css" label="Multi-column footer styles">{multiColumnStylesCode}</code-block>
  </section>

  <section>
    <h2>Footer with Newsletter</h2>
    <layout-text>
      <p>A footer that includes a newsletter signup form alongside navigation links. Uses <code>layout-sidebar</code> to create a split layout where the newsletter section takes priority, with link columns on the side.</p>
    </layout-text>

    <browser-window
      src="/docs/patterns/demos/footer-newsletter.html"
      url="https://vanilla-breeze.dev/footer-newsletter"
      title="Footer with Newsletter"
      shadow>
    </browser-window>

    <code-block language="html" label="Footer with newsletter signup">{newsletterFooterCode}</code-block>

    <h3>Newsletter Styles</h3>
    <layout-text>
      <p>Additional styles specific to the newsletter section:</p>
    </layout-text>

    <code-block language="css" label="Newsletter section styles">{newsletterStylesCode}</code-block>
  </section>

  <section>
    <h2>Base Footer Styles</h2>
    <layout-text>
      <p>These base styles are shared across all footer variants:</p>
    </layout-text>

    <code-block language="css" label="Base footer styles">{footerStylesCode}</code-block>
  </section>

  <section>
    <h2>Usage Notes</h2>
    <layout-text>
      <ul>
        <li><strong>Accessibility:</strong> Use <code>aria-label</code> on each <code>&lt;nav&gt;</code> element to distinguish between different navigation sections (e.g., "Company links", "Legal links")</li>
        <li><strong>Social icons:</strong> Always include <code>aria-label</code> on social media links since they only contain icons</li>
        <li><strong>Newsletter forms:</strong> Use <code>class="sr-only"</code> on labels for screen reader accessibility when using placeholder text</li>
        <li><strong>Copyright:</strong> Place copyright text at the bottom and update the year dynamically if needed</li>
        <li><strong>Link organization:</strong> Group related links under descriptive headings for better navigation</li>
        <li><strong>Responsive behavior:</strong> Test footer layouts at various viewport widths to ensure graceful wrapping</li>
      </ul>
    </layout-text>
  </section>

  <section>
    <h2>Related</h2>
    <layout-grid data-min="200px" data-gap="m">
      <a href="/docs/patterns/navigation/navbar/" class="section-card">
        <h3>Navbar</h3>
        <p>Header navigation patterns</p>
      </a>
      <a href="/docs/elements/web-components/icon/" class="section-card">
        <h3>Icon WC</h3>
        <p>Icon web component documentation</p>
      </a>
      <a href="/docs/elements/layout/grid/" class="section-card">
        <h3>Layout Grid</h3>
        <p>Responsive grid layout documentation</p>
      </a>
      <a href="/docs/elements/web-components/form-field/" class="section-card">
        <h3>Form Field</h3>
        <p>Form field component for inputs</p>
      </a>
    </layout-grid>
  </section>
</PatternLayout>
