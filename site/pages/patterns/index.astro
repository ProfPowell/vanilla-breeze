---
/**
 * Patterns Showcase
 *
 * Standalone page showcasing UI patterns - similar to Tailwind's component gallery.
 * Separate from main docs for independent development and testing.
 */
import BaseHead from '../../components/BaseHead.astro';

const patterns = {
  navigation: {
    title: 'Navigation',
    demos: [
      { name: 'Simple Navbar', file: 'navbar-simple', description: 'Basic horizontal nav with links' },
      { name: 'Dropdown Navbar', file: 'navbar-dropdown', description: 'Nav with dropdown menus' },
      { name: 'Search Navbar', file: 'navbar-search', description: 'Nav with integrated search' },
      { name: 'Mobile Navbar', file: 'navbar-mobile', description: 'Responsive hamburger menu' },
      { name: 'Sticky Navbar', file: 'navbar-sticky', description: 'Fixed header on scroll' },
    ]
  },
  forms: {
    title: 'Forms',
    demos: [
      { name: 'Simple Sign In', file: 'sign-in-simple', description: 'Centered card login form' },
      { name: 'Split Sign In', file: 'sign-in-split', description: 'Two-column layout with brand panel' },
      { name: 'Social Sign In', file: 'sign-in-social', description: 'Login with social providers' },
      { name: 'Two-Factor Auth', file: 'sign-in-2fa', description: 'Code input for 2FA' },
    ]
  },
  marketing: {
    title: 'Marketing',
    demos: [
      { name: 'Centered Hero', file: 'hero-centered', description: 'Simple centered headline and CTA' },
      { name: 'Split Hero', file: 'hero-split-image', description: 'Text and image side by side' },
      { name: 'Background Hero', file: 'hero-background', description: 'Full background with overlay' },
      { name: 'Hero with Form', file: 'hero-form', description: 'Newsletter signup embedded' },
      { name: 'Video Hero', file: 'hero-video', description: 'Video background effect' },
    ]
  },
  application: {
    title: 'Application',
    demos: [
      { name: 'Stacked Shell', file: 'shell-stacked', description: 'Header + content + footer' },
      { name: 'Sidebar Shell', file: 'shell-sidebar', description: 'Fixed sidebar with content' },
      { name: 'Multi-Column', file: 'shell-multi-column', description: 'Three-column email client style' },
      { name: 'Collapsible Sidebar', file: 'shell-collapsible', description: 'Toggle sidebar to icons' },
    ]
  },
  feedback: {
    title: 'Feedback',
    demos: [
      { name: 'Simple Empty State', file: 'empty-simple', description: 'Icon and text centered' },
      { name: 'Illustration Empty', file: 'empty-illustration', description: 'Placeholder for custom art' },
      { name: 'Empty with Action', file: 'empty-action', description: 'CTA button to add content' },
    ]
  },
  data: {
    title: 'Data Display',
    demos: [
      { name: 'Simple Stats', file: 'stats-simple', description: 'Number grid' },
      { name: 'Stats with Change', file: 'stats-change', description: 'Up/down indicators' },
      { name: 'Card Stats', file: 'stats-cards', description: 'Stats in cards with icons' },
    ]
  }
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <BaseHead
    title="UI Patterns - Vanilla Breeze"
    description="Complete UI patterns built with semantic HTML. Navigation, forms, marketing sections, and application layouts."
  />
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: var(--font-sans);
      background: var(--color-surface);
      color: var(--color-text);
    }

    .page-header {
      background: var(--color-surface-raised);
      border-block-end: 1px solid var(--color-border);
      padding: var(--size-l) var(--size-xl);
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .page-header h1 {
      margin: 0;
      font-size: var(--font-size-xl);
    }

    .page-header p {
      margin: var(--size-xs) 0 0;
      color: var(--color-text-muted);
    }

    .page-header nav {
      margin-block-start: var(--size-m);
      display: flex;
      flex-wrap: wrap;
      gap: var(--size-xs);
    }

    .page-header nav a {
      padding: var(--size-xs) var(--size-s);
      background: var(--color-surface);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-m);
      color: var(--color-text);
      text-decoration: none;
      font-size: var(--font-size-s);
      transition: all var(--duration-fast) var(--ease-default);
    }

    .page-header nav a:hover {
      border-color: var(--color-interactive);
      color: var(--color-interactive);
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: var(--size-xl);
    }

    .category {
      margin-block-end: var(--size-3xl);
    }

    .category h2 {
      font-size: var(--font-size-2xl);
      margin: 0 0 var(--size-l);
      padding-block-end: var(--size-s);
      border-block-end: 1px solid var(--color-border);
    }

    .pattern-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: var(--size-l);
    }

    .pattern-card {
      background: var(--color-surface-raised);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-l);
      overflow: hidden;
      transition: box-shadow var(--duration-fast) var(--ease-default);
    }

    .pattern-card:hover {
      box-shadow: var(--shadow-md);
    }

    .pattern-preview {
      height: 200px;
      background: var(--color-surface);
      border-block-end: 1px solid var(--color-border);
      overflow: hidden;
    }

    .pattern-preview iframe {
      width: 100%;
      height: 400px;
      border: none;
      transform: scale(0.5);
      transform-origin: top left;
      pointer-events: none;
    }

    .pattern-info {
      padding: var(--size-m);
    }

    .pattern-info h3 {
      margin: 0 0 var(--size-xs);
      font-size: var(--font-size-base);
    }

    .pattern-info p {
      margin: 0 0 var(--size-m);
      font-size: var(--font-size-s);
      color: var(--color-text-muted);
    }

    .pattern-actions {
      display: flex;
      gap: var(--size-s);
    }

    .pattern-actions a {
      padding: var(--size-xs) var(--size-s);
      font-size: var(--font-size-s);
      text-decoration: none;
      border-radius: var(--radius-m);
    }

    .btn-view {
      background: var(--color-interactive);
      color: white;
    }

    .btn-view:hover {
      background: var(--color-interactive-hover);
    }

    .btn-source {
      background: var(--color-surface);
      border: 1px solid var(--color-border);
      color: var(--color-text);
    }

    .btn-source:hover {
      border-color: var(--color-interactive);
      color: var(--color-interactive);
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: var(--size-xs);
      color: var(--color-text-muted);
      text-decoration: none;
      font-size: var(--font-size-s);
      margin-block-end: var(--size-m);
    }

    .back-link:hover {
      color: var(--color-interactive);
    }
  </style>
</head>
<body>
  <header class="page-header">
    <a href="/" class="back-link">&larr; Back to Vanilla Breeze</a>
    <h1>UI Patterns</h1>
    <p>Complete UI patterns built with semantic HTML and Vanilla Breeze. Click to view full-page demos.</p>
    <nav>
      {Object.entries(patterns).map(([key, category]) => (
        <a href={`#${key}`}>{category.title}</a>
      ))}
    </nav>
  </header>

  <main class="container">
    {Object.entries(patterns).map(([key, category]) => (
      <section class="category" id={key}>
        <h2>{category.title}</h2>
        <div class="pattern-grid">
          {category.demos.map(demo => (
            <article class="pattern-card">
              <div class="pattern-preview">
                <iframe
                  src={`/docs/patterns/demos/${demo.file}.html`}
                  title={demo.name}
                  loading="lazy"
                ></iframe>
              </div>
              <div class="pattern-info">
                <h3>{demo.name}</h3>
                <p>{demo.description}</p>
                <div class="pattern-actions">
                  <a href={`/docs/patterns/demos/${demo.file}.html`} class="btn-view" target="_blank">View Demo</a>
                  <a href={`/docs/patterns/navigation/navbar/#${demo.file}`} class="btn-source">Documentation</a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </section>
    ))}
  </main>

  <script>
    import '/src/lib/theme-manager.js';
    import { ThemeManager } from '/src/lib/theme-manager.js';
    ThemeManager.init();
  </script>
</body>
</html>
