---
/**
 * Home Page
 *
 * Landing page for Vanilla Breeze documentation site.
 */

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Import additional styles (CSS is safe to import server-side)
import '../../docs/docs.css';
---

<!DOCTYPE html>
<html lang="en" data-page="docs">
<head>
  <BaseHead
    title="A Layered HTML Component System"
    description="Build with native HTML elements, enhance progressively with CSS custom elements and JavaScript web components. Zero dependencies, no build step required."
  />
  <style>
    /* Hero Section */
    .hero {
      padding-block: var(--size-2xl) var(--size-3xl);
      text-align: center;
    }

    .hero h1 {
      font-size: clamp(var(--font-size-2xl), 5vw, var(--font-size-4xl));
      margin-block-end: var(--size-s);
    }

    .hero .tagline {
      font-size: var(--font-size-lg);
      color: var(--color-text-muted);
      max-inline-size: 50ch;
      margin-inline: auto;
      margin-block-end: var(--size-xl);
    }

    .hero-demo {
      margin-block: var(--size-xl);
      max-inline-size: var(--content-wide);
      margin-inline: auto;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--size-l);
      align-items: stretch;
    }

    .hero-demo code-block {
      margin: 0;
      text-align: start;
      block-size: 100%;
    }

    .hero-demo browser-window {
      margin: 0;
      resize: none;
      text-align: start;
      block-size: 100%;
    }

    .demo-result {
      padding: var(--size-l);
    }

    .catchphrase {
      font-size: clamp(var(--font-size-lg), 3vw, var(--font-size-2xl));
      font-weight: 600;
      margin-block: var(--size-xl);
      color: var(--color-text);
    }

    .catchphrase .highlight {
      color: var(--color-interactive);
    }

    .catchphrase .muted {
      color: var(--color-text-muted);
    }

    @media (max-width: 900px) {
      .hero-demo {
        grid-template-columns: 1fr;
      }
    }

    .hero-actions {
      margin-block-start: var(--size-l);
    }

    .hero-actions .button {
      display: inline-flex;
      align-items: center;
      gap: var(--size-xs);
      padding: var(--size-s) var(--size-l);
      font-size: var(--font-size-base);
      font-weight: 500;
      text-decoration: none;
      border-radius: var(--radius-m);
      cursor: pointer;
      transition: all 0.15s ease;
    }

    .hero-actions .button.primary {
      background: var(--color-interactive);
      color: white;
      border: 2px solid var(--color-interactive);
    }

    .hero-actions .button.primary:hover {
      background: var(--color-interactive-hover);
      border-color: var(--color-interactive-hover);
    }

    .hero-actions .button.outline {
      background: transparent;
      color: var(--color-interactive);
      border: 2px solid var(--color-interactive);
    }

    .hero-actions .button.outline:hover {
      background: var(--color-interactive);
      color: white;
    }

    .hero-actions .button.ghost {
      background: transparent;
      color: var(--color-text);
      border: 2px solid var(--color-border);
    }

    .hero-actions .button.ghost:hover {
      border-color: var(--color-interactive);
      color: var(--color-interactive);
    }

    /* Features Grid */
    .features-section {
      padding-block: var(--size-2xl);
      background: var(--color-surface-raised);
      margin-inline: calc(-1 * var(--size-l));
      padding-inline: var(--size-l);
    }

    .features-section h2 {
      text-align: center;
      margin-block-end: var(--size-xl);
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--size-l);
      max-inline-size: var(--content-wide);
      margin-inline: auto;
      list-style: none;
      padding: 0;
    }

    .feature-card {
      padding: var(--size-l);
      background: var(--color-surface);
      border: var(--border-width-thin) solid var(--color-border);
      border-radius: var(--radius-m);
    }

    .feature-card h3 {
      display: flex;
      align-items: center;
      gap: var(--size-s);
      font-size: var(--font-size-lg);
      margin-block-end: var(--size-xs);
    }

    .feature-card p {
      color: var(--color-text-muted);
      margin: 0;
    }

    /* Quick Start Section */
    .quickstart-section {
      padding-block: var(--size-2xl);
      border-block-start: var(--border-width-thin) solid var(--color-border);
    }

    .quickstart-section h2 {
      text-align: center;
      margin-block-end: var(--size-2xl);
    }

    .quickstart-steps {
      max-inline-size: var(--content-wide);
      margin-inline: auto;
    }

    .quickstart-code {
      display: flex;
      flex-direction: column;
      gap: var(--size-l);
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .quickstart-step {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: var(--size-m);
      align-items: start;
    }

    .step-number {
      display: flex;
      align-items: center;
      justify-content: center;
      inline-size: 2rem;
      block-size: 2rem;
      background: var(--color-interactive);
      color: white;
      border-radius: 50%;
      font-weight: 600;
      font-size: var(--font-size-sm);
      flex-shrink: 0;
    }

    .step-content h3 {
      font-size: var(--font-size-lg);
      margin-block-end: var(--size-xs);
    }

    .step-content p {
      color: var(--color-text-muted);
      font-size: var(--font-size-sm);
      margin-block-end: var(--size-s);
    }

    .step-content code-block {
      margin-block: 0;
    }

    .quickstart-result {
      display: flex;
      flex-direction: column;
    }

    .quickstart-result h3 {
      font-size: var(--font-size-lg);
      margin-block-end: var(--size-m);
      text-align: center;
    }

    .quickstart-result browser-window {
      flex: 1;
      resize: none;
    }

    .result-demo {
      padding: var(--size-l);
    }

    /* Demo result content styling */
    .demo-result h1,
    .result-demo h1 {
      margin: 0;
    }

    .demo-result p,
    .result-demo p {
      margin: 0;
      color: var(--color-text-muted);
    }

    .demo-result .stat-card-heading,
    .result-demo .stat-card-heading {
      margin: 0 0 var(--size-2xs);
      font-size: var(--font-size-sm);
    }

    .demo-result .stat-card-value,
    .result-demo .stat-card-value {
      margin: 0;
      font-size: var(--font-size-xl);
      font-weight: 600;
      color: var(--color-interactive);
    }

    /* Stats Bar */
    .stats-bar {
      padding: var(--size-l);
      margin-block: var(--size-xl);
    }

    .stat {
      margin: 0;
      text-align: center;
    }

    .stat-number {
      display: block;
      font-size: var(--font-size-3xl);
      font-weight: var(--font-weight-bold);
      color: var(--color-interactive);
      line-height: 1;
    }

    .stat-label {
      font-size: var(--font-size-sm);
      color: var(--color-text-muted);
    }

    /* Quick Navigation */
    .quicknav-section {
      padding-block: var(--size-2xl);
      border-block-start: var(--border-width-thin) solid var(--color-border);
    }

    .quicknav-section h2 {
      text-align: center;
      margin-block-end: var(--size-xl);
    }

    .quicknav-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--size-m);
      max-inline-size: var(--content-wide);
      margin-inline: auto;
    }

    .quicknav-grid a {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: var(--size-xs);
      padding: var(--size-l);
      background: var(--color-surface);
      border: var(--border-width-thin) solid var(--color-border);
      border-radius: var(--radius-m);
      text-decoration: none;
      color: var(--color-text);
      text-align: center;
      transition: border-color 0.15s, box-shadow 0.15s;
    }

    .quicknav-grid a:hover {
      border-color: var(--color-interactive);
      box-shadow: 0 4px 12px oklch(0% 0 0 / 0.1);
    }

    .quicknav-grid a span {
      font-size: var(--font-size-sm);
      color: var(--color-text-muted);
    }
  </style>
</head>
<body>
  <Header currentSection="home" />

  <main data-pagefind-body>
    <!-- Hero Section -->
    <section class="hero">
      <h1>Vanilla Breeze</h1>
      <p class="tagline">A layered HTML component system. Build with native HTML, enhance with CSS, add interactivity with JavaScript - each layer optional.</p>

      <figure class="hero-demo">
        <code-block language="html" label="Write this...">&lt;layout-stack data-gap="m"&gt;
  &lt;h1&gt;Welcome&lt;/h1&gt;
  &lt;p&gt;Build interfaces with semantic HTML.&lt;/p&gt;

  &lt;layout-cluster data-gap="s"&gt;
    &lt;button class="primary"&gt;Get Started&lt;/button&gt;
    &lt;button class="secondary"&gt;Learn More&lt;/button&gt;
  &lt;/layout-cluster&gt;

  &lt;layout-grid data-min="150px" data-gap="s"&gt;
    &lt;layout-card&gt;
      &lt;h3&gt;Users&lt;/h3&gt;
      &lt;p&gt;2,847&lt;/p&gt;
    &lt;/layout-card&gt;
    &lt;layout-card&gt;
      &lt;h3&gt;Revenue&lt;/h3&gt;
      &lt;p&gt;$48.2k&lt;/p&gt;
    &lt;/layout-card&gt;
  &lt;/layout-grid&gt;
&lt;/layout-stack&gt;</code-block>
        <browser-window url="...get this">
          <output class="demo-result">
            <layout-stack data-gap="m">
              <h1>Welcome</h1>
              <p>Build interfaces with semantic HTML.</p>
              <layout-cluster data-gap="s">
                <button type="button" class="primary">Get Started</button>
                <button type="button" class="secondary">Learn More</button>
              </layout-cluster>
              <layout-grid data-min="150px" data-gap="s">
                <layout-card>
                  <h3 class="stat-card-heading">Users</h3>
                  <p class="stat-card-value">2,847</p>
                </layout-card>
                <layout-card>
                  <h3 class="stat-card-heading">Revenue</h3>
                  <p class="stat-card-value">$48.2k</p>
                </layout-card>
              </layout-grid>
            </layout-stack>
          </output>
        </browser-window>
      </figure>

      <p class="catchphrase">
        <span class="highlight">Simple Elegant Markup</span>
        <span class="muted">&gt;</span>
        Complex <code>&lt;div&gt;</code> Soup!
      </p>

      <layout-cluster class="hero-actions" data-justify="center" data-gap="m">
        <a href="/docs/elements/" class="button primary">Get Started</a>
        <a href="/docs/examples/kitchen-sink/" class="button outline">View Examples</a>
        <a href="https://github.com/profpowell/vanilla-breeze" class="button ghost">
          <icon-wc name="github" size="sm"></icon-wc>
          GitHub
        </a>
      </layout-cluster>
    </section>

    <!-- Stats -->
    <layout-cluster class="stats-bar" data-justify="center" data-gap="2xl">
      <dl class="stat">
        <dd class="stat-number">84</dd>
        <dt class="stat-label">Native Elements</dt>
      </dl>
      <dl class="stat">
        <dd class="stat-number">15</dd>
        <dt class="stat-label">Custom Elements</dt>
      </dl>
      <dl class="stat">
        <dd class="stat-number">9</dd>
        <dt class="stat-label">Web Components</dt>
      </dl>
      <dl class="stat">
        <dd class="stat-number">0</dd>
        <dt class="stat-label">Dependencies</dt>
      </dl>
    </layout-cluster>

    <!-- Features Section -->
    <section class="features-section">
      <h2>Built Different</h2>
      <ul class="features-grid">
        <li>
          <layout-card class="feature-card">
            <h3>
              <icon-wc name="file-code" size="sm"></icon-wc>
              HTML-First
            </h3>
            <p>Start with semantic HTML5 elements. Everything works without CSS or JavaScript.</p>
          </layout-card>
        </li>
        <li>
          <layout-card class="feature-card">
            <h3>
              <icon-wc name="layers" size="sm"></icon-wc>
              Progressive Enhancement
            </h3>
            <p>Add CSS for styling, JavaScript for interactivity. Each layer is optional.</p>
          </layout-card>
        </li>
        <li>
          <layout-card class="feature-card">
            <h3>
              <icon-wc name="package" size="sm"></icon-wc>
              Zero Dependencies
            </h3>
            <p>No frameworks, no build tools required. Works directly in the browser.</p>
          </layout-card>
        </li>
        <li>
          <layout-card class="feature-card">
            <h3>
              <icon-wc name="palette" size="sm"></icon-wc>
              Design Tokens
            </h3>
            <p>CSS custom properties for colors, spacing, typography. Consistent and themeable.</p>
          </layout-card>
        </li>
        <li>
          <layout-card class="feature-card">
            <h3>
              <icon-wc name="layout-grid" size="sm"></icon-wc>
              Layout Primitives
            </h3>
            <p>Stack, Grid, Sidebar, Cluster - CSS-only custom elements for any layout.</p>
          </layout-card>
        </li>
        <li>
          <layout-card class="feature-card">
            <h3>
              <icon-wc name="accessibility" size="sm"></icon-wc>
              Accessible
            </h3>
            <p>ARIA patterns built-in. Keyboard navigation and screen reader support.</p>
          </layout-card>
        </li>
      </ul>
    </section>

    <!-- Quick Start Section -->
    <section class="quickstart-section">
      <h2>Quick Start</h2>
      <layout-split class="quickstart-steps" data-gap="2xl">
        <ol class="quickstart-code">
          <li class="quickstart-step">
            <span class="step-number">1</span>
            <article class="step-content">
              <h3>Add the stylesheet</h3>
              <p>Include Vanilla Breeze CSS in your HTML head.</p>
              <code-block language="html">&lt;link rel="stylesheet" href="vanilla-breeze.css"&gt;</code-block>
            </article>
          </li>
          <li class="quickstart-step">
            <span class="step-number">2</span>
            <article class="step-content">
              <h3>Write semantic HTML</h3>
              <p>Use native elements with simple class names for variants.</p>
              <code-block language="html">&lt;layout-stack data-gap="m"&gt;
  &lt;h1&gt;Welcome&lt;/h1&gt;
  &lt;p&gt;Build beautiful interfaces with semantic HTML.&lt;/p&gt;
  &lt;layout-cluster data-gap="s"&gt;
    &lt;button class="primary"&gt;Get Started&lt;/button&gt;
    &lt;button class="outline"&gt;Learn More&lt;/button&gt;
  &lt;/layout-cluster&gt;
&lt;/layout-stack&gt;</code-block>
            </article>
          </li>
          <li class="quickstart-step">
            <span class="step-number">3</span>
            <article class="step-content">
              <h3>Add interactivity (optional)</h3>
              <p>Include JS for enhanced components like accordions and tabs.</p>
              <code-block language="html">&lt;script type="module" src="vanilla-breeze.js"&gt;&lt;/script&gt;</code-block>
            </article>
          </li>
        </ol>
        <aside class="quickstart-result">
          <h3>Result</h3>
          <browser-window url="index.html">
            <output class="result-demo">
              <layout-stack data-gap="m">
                <h1>Welcome</h1>
                <p>Build beautiful interfaces with semantic HTML.</p>
                <layout-cluster data-gap="s">
                  <button type="button" class="primary">Get Started</button>
                  <button type="button" class="outline">Learn More</button>
                </layout-cluster>
              </layout-stack>
            </output>
          </browser-window>
        </aside>
      </layout-split>
    </section>

    <!-- Quick Navigation -->
    <section class="quicknav-section">
      <h2>Explore the Docs</h2>
      <nav class="quicknav-grid" aria-label="Documentation sections">
        <a href="/docs/quick-start/">
          <icon-wc name="rocket" size="lg"></icon-wc>
          Quick Start
          <span>Get up and running fast</span>
        </a>
        <a href="/docs/tutorial/">
          <icon-wc name="book-open" size="lg"></icon-wc>
          Tutorial
          <span>Step-by-step guide</span>
        </a>
        <a href="/docs/themes/">
          <icon-wc name="palette" size="lg"></icon-wc>
          Themes
          <span>Customize the look</span>
        </a>
        <a href="/docs/tokens/">
          <icon-wc name="paintbrush" size="lg"></icon-wc>
          Design Tokens
          <span>Colors, spacing, typography</span>
        </a>
        <a href="/docs/elements/native/">
          <icon-wc name="code" size="lg"></icon-wc>
          Native Elements
          <span>84 styled HTML5 elements</span>
        </a>
        <a href="/docs/elements/custom-elements/">
          <icon-wc name="box" size="lg"></icon-wc>
          Custom Elements
          <span>15 CSS-only layouts</span>
        </a>
        <a href="/docs/elements/web-components/">
          <icon-wc name="zap" size="lg"></icon-wc>
          Web Components
          <span>9 interactive components</span>
        </a>
        <a href="/docs/snippets/">
          <icon-wc name="clipboard" size="lg"></icon-wc>
          Snippets
          <span>Copy-paste patterns</span>
        </a>
        <a href="/docs/integrations/">
          <icon-wc name="puzzle" size="lg"></icon-wc>
          Integrations
          <span>Astro & Eleventy</span>
        </a>
      </nav>
    </section>
  </main>

  <Footer />

  <!-- Client-side scripts - Astro will bundle these -->
  <script>
    // Import Vanilla Breeze JS and web components - explicit imports for bundling
    import '/src/lib/theme-manager.js';
    import '/src/custom-elements/register.js';
    import '/src/utils/tooltip-init.js';
    import '/src/lib/debug-content-model.js';
    import { ThemeManager } from '/src/lib/theme-manager.js';
    import { initExternalThemeSync } from '/src/utils/external-theme-sync.js';

    // Web components - explicit imports since barrel import isn't bundling
    import '/src/web-components/tabs-wc/logic.js';
    import '/src/web-components/footnotes-wc/logic.js';
    import '/src/web-components/accordion-wc/logic.js';
    import '/src/web-components/toast-wc/logic.js';
    import '/src/web-components/tooltip-wc/logic.js';
    import '/src/web-components/dropdown-wc/logic.js';
    import '/src/web-components/icon-wc/icon-wc.js';
    import '/src/web-components/theme-wc/logic.js';
    import '/src/web-components/heading-links/logic.js';
    import '/src/web-components/page-toc/logic.js';
    import '/src/web-components/table-wc/logic.js';
    import '/src/web-components/search-wc/logic.js';
    import '/src/web-components/card-list/logic.js';

    import '@profpowell/code-block';
    import '@profpowell/browser-window';

    // Initialize theme system
    ThemeManager.init();
    initExternalThemeSync();
  </script>
</body>
</html>
