---
/**
 * BaseLayout
 *
 * Minimal page layout with header, main, and footer.
 * Use as a foundation for other layouts.
 *
 * Props:
 * - title: Page title
 * - description: Meta description
 * - image: OG image URL (optional)
 */

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <BaseHead title={title} description={description} image={image} />
</head>
<body>
  <Header variant="simple" showSearch={false} showMobileMenu={false} />

  <main>
    <slot />
  </main>

  <Footer />

  <script>
    import '../../src/main.js';
  </script>
</body>
</html>

<style>
  main {
    min-height: 70vh;
    padding: var(--size-xl) var(--size-l);
  }
</style>
