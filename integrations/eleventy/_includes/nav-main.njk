{#
  Main Navigation Partial

  Horizontal navigation for site header.

  Usage:
  {% include "nav-main.njk" %}

  Requires `navigation.main` data from _data/navigation.json
#}

<nav class="horizontal pills" aria-label="Main navigation">
  <ul>
    {% for item in navigation.main %}
      <li>
        <a href="{{ item.href }}"{% if item.href == page.url %} aria-current="page"{% endif %}>
          {{ item.label }}
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>
