---
layout: base.njk
---
{#
  Page Layout

  Basic page with centered content.

  Front matter:
  - title: Page title
  - description: Meta description
#}

<layout-center data-max-width="wide">
  <layout-stack data-gap="xl">
    {% if title %}
    <header>
      <h1>{{ title }}</h1>
      {% if description %}
      <p class="lead">{{ description }}</p>
      {% endif %}
    </header>
    {% endif %}

    <layout-text data-measure="normal">
      {{ content | safe }}
    </layout-text>
  </layout-stack>
</layout-center>

<style>
  .lead {
    font-size: var(--font-size-xl);
    color: var(--color-text-muted);
  }
</style>
