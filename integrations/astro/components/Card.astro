---
/**
 * Card Component
 *
 * Wrapper around the layout-card custom element.
 * Provides a typed interface for card variants.
 *
 * Props:
 * - variant: 'default' | 'outlined' | 'elevated' (optional)
 * - interactive: boolean - makes entire card clickable (optional)
 * - href: string - link URL when interactive (optional)
 * - class: Additional CSS classes (optional)
 */

interface Props {
  variant?: 'default' | 'outlined' | 'elevated';
  interactive?: boolean;
  href?: string;
  class?: string;
}

const {
  variant,
  interactive = false,
  href,
  class: className,
} = Astro.props;

const Tag = interactive && href ? 'a' : 'div';
---

<layout-card
  data-variant={variant}
  data-interactive={interactive || undefined}
  class:list={[className]}
>
  {interactive && href ? (
    <a href={href} class="card-link">
      <slot />
    </a>
  ) : (
    <slot />
  )}
</layout-card>

<style>
  layout-card {
    display: block;
  }

  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .card-link:focus-visible {
    outline: 2px solid var(--color-focus-ring);
    outline-offset: 2px;
    border-radius: var(--radius-m);
  }
</style>
