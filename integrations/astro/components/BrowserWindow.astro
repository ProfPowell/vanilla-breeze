---
/**
 * BrowserWindow Component
 *
 * Displays content in a fake browser chrome frame.
 * Useful for demos and documentation.
 *
 * Props:
 * - src: URL to load in iframe (optional, uses slot if not provided)
 * - url: Fake URL to display in address bar
 * - title: Title for the window
 * - shadow: Whether to apply shadow styling
 */

interface Props {
  src?: string;
  url?: string;
  title?: string;
  shadow?: boolean;
}

const {
  src,
  url = 'https://example.com',
  title = 'Demo',
  shadow = true,
} = Astro.props;
---

<browser-window
  src={src}
  url={url}
  title={title}
  shadow={shadow || undefined}
>
  {!src && <slot />}
</browser-window>

<style>
  browser-window {
    display: block;
    margin-block: var(--size-l);
  }
</style>
